<?xml version="1.0" encoding="utf-8"?>
<!-- 选择WIFI -->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F1F1F1" >

    <RelativeLayout
        android:id="@+id/title_layout"
        android:layout_width="match_parent"
        android:layout_height="62dp"
        android:background="#f1f1f1" >

        <ImageButton
            android:id="@+id/back_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:background="@drawable/connect_back_btn_btn"
            android:contentDescription="@string/imgdes" />

        <ImageView
            android:id="@+id/wifilink_progress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:background="@drawable/setp_2"
            android:contentDescription="@string/imgdes" />
    </RelativeLayout>

    <TextView
        android:id="@+id/wifilist_textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/title_layout"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:text="@string/wifi_link_17_text"
        android:textColor="#595959"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/wifilist_textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/wifilist_textView1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:text="@string/wifi_link_17_2_text"
        android:textColor="#595959"
        android:textSize="18sp" />

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/wifilist_textView2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="34dp"
        android:contentDescription="@string/imgdes"
        android:src="@drawable/connect_gif_ipc_bluelight" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/wifilist_textView2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="34dp"
        android:background="@anim/ipc_signal"
        android:contentDescription="@string/imgdes" />

    <RelativeLayout
        android:id="@+id/list_title_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/imageView1"
        android:layout_marginTop="15dp"
        android:background="#F1F1F1" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="18dp"
            android:layout_marginTop="26dp"
            android:text="@string/wifi_link_8_text"
            android:textColor="#0587ff"
            android:textSize="20sp" />

        <ImageButton
            android:id="@+id/refresh_help_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="18dp"
            android:layout_marginTop="26dp"
            android:background="@drawable/connect_refresh_btn"
            android:contentDescription="@string/imgdes" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/refresh_help_btn"
            android:layout_marginLeft="18dp"
            android:layout_marginRight="18dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/connect_line_green"
            android:contentDescription="@string/imgdes" />
    </RelativeLayout>

    <Button
        android:id="@+id/next_btn"
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="18dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/connect_mianbtn_ash"
        android:text="@string/next_text"
        android:textColor="@color/white"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/wifi_link_list_help"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/next_btn"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="15dp"
        android:drawableLeft="@drawable/connecthelp_icon"
        android:drawablePadding="5dp"
        android:text="@string/wifi_link_33_text"
        android:textColor="#828282"
        android:textSize="16sp" />

    <ListView
        android:id="@+id/wifi_list_listview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/wifi_link_list_help"
        android:layout_below="@id/list_title_layout"
        android:layout_marginBottom="25dp"
        android:scrollbars="none" >
    </ListView>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="82dp"
        android:layout_marginTop="130dp"
        android:background="@drawable/empolder"
        android:contentDescription="@string/imgdes"
        android:visibility="gone" />

    <include
        android:id="@+id/loading_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        layout="@layout/loading"
        android:visibility="gone" />

</RelativeLayout>
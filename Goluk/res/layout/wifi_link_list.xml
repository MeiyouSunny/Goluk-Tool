<?xml version="1.0" encoding="utf-8"?>
<!-- 选择WIFI -->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:background="#F1F1F1">
	
	<RelativeLayout
		android:id="@+id/title_layout"
		android:layout_width="match_parent"
		android:layout_height="62dp"
		android:background="#f1f1f1">
		
		<ImageButton
			android:id="@+id/back_btn"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_centerVertical="true"
			android:background="@drawable/connect_back_btn_btn"
			android:contentDescription="@string/imgdes" />
	</RelativeLayout>
	
	<TextView
		android:id="@+id/textView1"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_marginLeft="25dp"
		android:layout_marginRight="25dp"
		android:layout_below="@id/title_layout"
		android:textSize="24sp"
		android:textColor="#595959"
		android:text="@string/wifi_link_17_text" />
	
	<ImageView
		android:id="@+id/imageView1"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_below="@id/textView1"
		android:layout_centerHorizontal="true"
		android:layout_marginTop="38dp"
		android:src="@drawable/connect_gif_ipc_bluelight"
		android:contentDescription="@string/imgdes"/>
	
	<ImageView
		android:id="@+id/imageView2"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_below="@id/textView1"
		android:layout_centerHorizontal="true"
		android:layout_marginTop="38dp"
		android:background="@anim/ipc_signal"
		android:contentDescription="@string/imgdes"/>
	
	<RelativeLayout
		android:id="@+id/list_title_layout"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_marginTop="15dp"
		android:layout_below="@id/imageView1"
		android:background="#F1F1F1">
		
		<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginLeft="18dp"
			android:layout_marginTop="26dp"
			android:textSize="20sp"
			android:textColor="#0587ff"
			android:text="@string/wifi_link_8_text"/>
		
		<ImageButton
			android:id="@+id/refresh_help_btn"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginTop="26dp"
			android:layout_marginRight="18dp"
			android:layout_alignParentRight="true"
			android:background="@drawable/connect_refresh_btn"
			android:contentDescription="@string/imgdes" />
		
		<ImageView
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_marginTop="10dp"
			android:layout_marginLeft="18dp"
			android:layout_marginRight="18dp"
			android:layout_below="@id/refresh_help_btn"
			android:background="@drawable/connect_line_green"
			android:contentDescription="@string/imgdes"/>
	</RelativeLayout>
	
	<Button
		android:id="@+id/next_btn"
		android:layout_width="match_parent"
		android:layout_height="52dp"
		android:layout_marginBottom="34dp"
		android:layout_marginLeft="20dp"
		android:layout_marginRight="20dp"
		android:layout_alignParentBottom="true"
		android:background="@drawable/connect_mianbtn_ash"
		android:textSize="20sp"
		android:textColor="@color/white"
		android:text="@string/next_text" />
	
	<ListView
		android:id="@+id/wifi_list_listview"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:layout_marginBottom="34dp"
		android:layout_below="@id/list_title_layout"
		android:layout_above="@id/next_btn"
		android:scrollbars="none" >
	</ListView>
	
	<ImageView
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_marginTop="130dp"
		android:layout_marginLeft="82dp"
		android:background="@drawable/empolder"
		android:contentDescription="@string/imgdes"
		android:visibility="gone"/>
	
	<include
		android:id="@+id/loading_layout"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:visibility="gone"
		layout="@layout/loading"/>
</RelativeLayout>







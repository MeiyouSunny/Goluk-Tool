<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#c8000000" >

    <TextView
        android:id="@+id/share_input_cancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:text="@string/short_input_cancel"
        android:textColor="@color/blue"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/share_input_ok"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:text="@string/short_input_ok"
        android:textColor="@color/blue"
        android:textSize="14sp" />

    <EditText
        android:id="@+id/share_input_edit"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_below="@id/share_input_cancel"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="20dp"
        android:background="#c8000000"
        android:gravity="left|top"
        android:hint="@string/str_shortshare_other"
        android:textColor="@color/white"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/share_input_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@id/share_input_edit"
        android:layout_marginRight="8dp"
        android:layout_marginTop="10dp"
        android:textColor="@color/white" />

</RelativeLayout>
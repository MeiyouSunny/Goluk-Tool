<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#242424">
    
    <RelativeLayout
        android:id="@+id/title_layout"
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:background="#242424" >

        <ImageButton
            android:id="@+id/back_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="8dp"
            android:background="@drawable/carrecorder_tit_btn_back" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/car_recorder_title"
            android:textColor="@color/white"
            android:textSize="18sp" />
    </RelativeLayout>
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/title_layout"
        android:layout_marginTop="58dp" >

        <ImageView
            android:id="@+id/mIPCConnectState"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="8dp"
            android:background="@drawable/carrecorder_icon_ipc"
            android:contentDescription="@string/def" />

        <TextView
            android:id="@+id/mConnectTip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="6dp"
            android:text="@string/ipcconnecting"
            android:textColor="@color/carrecorder_text_nor_color"
            android:textSize="12sp" />
    </LinearLayout>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/title_layout"
        android:layout_marginRight="8dp"
        android:layout_marginTop="60dp"
        android:background="@drawable/carrecorder_liveindex_icon_1080"
        android:contentDescription="@string/def" />
    
    <RelativeLayout
        android:id="@+id/ipclive"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/title_layout" >

        <RelativeLayout 
            android:id="@+id/mRtmpPlayerLayout"
            android:layout_marginTop="76dp"   
            android:layout_width="match_parent"
	   		android:layout_height="wrap_content" >
	            	            
             	<RelativeLayout 
             	   android:id="@+id/vLayout"
	               android:layout_width="match_parent"
	               android:layout_height="match_parent">
             	   <com.rd.car.player.RtmpPlayerView 
	                android:id="@+id/mRtmpPlayerView"
	                android:layout_width="match_parent"
	                android:layout_height="match_parent" />
             	</RelativeLayout>
	            
	            <LinearLayout
		            android:id="@+id/mLoadingLayout"
		            android:layout_width="fill_parent"
		            android:layout_height="wrap_content"
		            android:layout_gravity="center"
		            android:layout_centerInParent="true"
		            android:orientation="vertical" >
		
		            <ImageView
		                android:id="@+id/mLoading"
		                android:layout_width="93.33dp"
		                android:layout_height="102.66dp"
		                android:layout_gravity="center"/>
		
		            <TextView
		                android:id="@+id/mLoadingText"
		                android:layout_width="fill_parent"
		                android:layout_height="wrap_content"
		                android:gravity="center"
		                android:paddingTop="20dp"
		                android:text="无码的视频也是高潮迭起"
		                android:textColor="#ffffff"
		                android:textSize="18sp" /> 
		        </LinearLayout>
		         
         </RelativeLayout>

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="76dp"
            android:layout_alignBottom="@+id/mRtmpPlayerLayout"
            android:layout_alignRight="@+id/mRtmpPlayerLayout"
            android:layout_marginRight="8dp"
            android:layout_marginBottom="8dp"
            android:background="@drawable/carrecorder_full_btn"
            android:contentDescription="@string/def" />
    </RelativeLayout>
    
    <ImageView
        android:id="@+id/position"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ipclive"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/carrecorder_icon_position"
        android:contentDescription="@string/def" />

    <TextView
        android:id="@+id/mAddr"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ipclive"
        android:layout_marginLeft="6dp"
        android:layout_marginTop="6dp"
        android:layout_toRightOf="@+id/position"
        android:text="北京市朝阳区朝外大街泛利大厦"
        android:textColor="@color/carrecorder_text_nor_color"
        android:textSize="12sp"  />
    
    <LinearLayout
    	android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/ipclive"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="6dp" >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginRight="6dp"
            android:background="@drawable/carrecorder_icon_record"
            android:contentDescription="@string/def" />

        <TextView
            android:id="@+id/mTime"
            android:text="00:00"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="6dp"
            android:textColor="@color/carrecorder_text_nor_color"
            android:textSize="12sp" />
    </LinearLayout>
    
    <LinearLayout
        android:id="@+id/bottomLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:gravity="center_vertical|center"
        android:paddingBottom="14dp" >

        <LinearLayout
            android:id="@+id/mFileLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center|center_horizontal"
            android:orientation="vertical" >

            <ImageButton
                android:id="@+id/mFileBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:duplicateParentState="true"
                android:background="@drawable/carrecorder_filecontorl_btn"
                android:contentDescription="@string/def" />

            <TextView
                android:id="@+id/mFileText"
                android:textSize="12sp"
                android:duplicateParentState="true"
                android:textColor="@color/text_color"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="文件管理" />
        </LinearLayout>

        <ImageButton
			android:visibility="invisible"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_ipc_8s" />

        <LinearLayout
            android:id="@+id/mSettingLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center|center_horizontal"
            android:orientation="vertical" >

            <ImageButton
                android:id="@+id/mSettingBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:duplicateParentState="true"
                android:background="@drawable/carrecorder_setup_btn"
                android:contentDescription="@string/def" />

            <TextView
                android:id="@+id/mSettingText"
                android:textSize="12sp"
                android:duplicateParentState="true"
                android:textColor="@color/text_color"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="记录仪设置" />
        </LinearLayout>
    </LinearLayout>
    
    <ImageButton
            android:id="@+id/m8sBtn"
            android:layout_marginBottom="14dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true" 
            android:layout_alignParentBottom="true"
            android:background="@drawable/btn_ipc_8s" />
    
    <Button 
		android:id="@+id/mShareBtn"
		android:visibility="gone"
		android:layout_above="@+id/m8sBtn"
   		android:layout_width="113.33dp"
  	  	android:layout_height="48dp"
  	  	android:layout_marginBottom="15dp"
  	  	android:layout_centerHorizontal="true" />
     
    <Button 
		android:id="@+id/wifi"
   		android:layout_width="100dp"
  	  	android:layout_height="100dp"
  	  	android:layout_alignParentRight="true"
		android:background="#00000000"
        />
</RelativeLayout>

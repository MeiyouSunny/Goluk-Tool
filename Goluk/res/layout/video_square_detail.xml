<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/user_login_bg" >

    <!-- title -->

    <include
        android:id="@+id/video_square_detail_head"
        layout="@layout/user_title" />

    <LinearLayout
        android:id="@+id/video_square_detail_show_allinfo"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/video_square_detail_head"
        android:orientation="vertical" >

        <!-- 用户信息 -->

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp" >

            <ImageView
                android:id="@+id/user_head"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:background="@drawable/my_head_moren7"
                android:scaleType="fitXY" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@+id/user_head"
                android:gravity="center_vertical"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/user_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:maxEms="10"
                    android:singleLine="true"
                    android:text="极路客"
                    android:textColor="#1163a2"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/user_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="03-19  13:53"
                    android:textColor="#888888"
                    android:textSize="12sp" />
            </LinearLayout>
        </RelativeLayout>
        <!-- 视频 -->

        <RelativeLayout
            android:id="@+id/mPlayerLayout"
            android:layout_width="match_parent"
            android:layout_height="205dp" >

            <cn.com.mobnote.golukmobile.player.FullScreenVideoView
                android:id="@+id/video_detail_videoview"
                android:layout_width="match_parent"
                android:layout_height="205dp"
                android:layout_centerInParent="true" />

            <RelativeLayout
                android:id="@+id/mImageLayout"
                android:layout_width="match_parent"
                android:layout_height="205dp">
            </RelativeLayout>

            <!-- 暂停按钮 -->

            <ImageView
                android:id="@+id/play_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:visibility="gone" />
            
            <!-- 进度条 -->
                <SeekBar
                    android:id="@+id/seekbar"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="@drawable/progress_bg"
                    android:layout_alignParentBottom="true"
                    android:paddingLeft="-10dp"
                    android:paddingRight="-12dp"
                    android:max="100"
                    android:progress="0"
                    android:progressDrawable="@drawable/video_detail_seekbar_style"
                    android:thumb="@null"/>

            <!-- loading -->

            <LinearLayout
                android:id="@+id/mLoadingLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_gravity="center"
                android:orientation="vertical"
                android:visibility="gone" >

                <ImageView
                    android:id="@+id/mLoading"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_gravity="center" />

                <TextView
                    android:id="@+id/mLoadingText"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:gravity="center"
                    android:text="视频加载中，请稍候..."
                    android:textColor="#ffffff"
                    android:textSize="12sp" />
            </LinearLayout>
        </RelativeLayout>
        
        <!-- 点赞、评论、分享 -->

        <RelativeLayout
            android:id="@+id/functionLayouyt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="16dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingTop="16dp" >

            <LinearLayout
                android:id="@+id/praiseLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:gravity="center_vertical" >

                <ImageView
                    android:id="@+id/video_square_detail_like"
                    android:layout_width="20dp"
                    android:layout_height="18dp"
                    android:background="@drawable/videodetail_like"
                    android:contentDescription="@string/def" />

                <TextView
                    android:id="@+id/zanText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:paddingLeft="4dp"
                    android:text="赞"
                    android:textColor="#888888"
                    android:textSize="12sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/commentLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:gravity="center_vertical" >

                <ImageView
                    android:id="@+id/video_square_detail_comment"
                    android:layout_width="20dp"
                    android:layout_height="18dp"
                    android:background="@drawable/videodetail_comment"
                    android:contentDescription="@string/def" />

                <TextView
                    android:id="@+id/commentText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:paddingLeft="4dp"
                    android:text="评论"
                    android:textColor="#888888"
                    android:textSize="12sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/shareLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:gravity="center_vertical" >

                <ImageView
                    android:id="@+id/video_square_detail_share"
                    android:layout_width="20dp"
                    android:layout_height="18dp"
                    android:background="@drawable/videodetail_share"
                    android:contentDescription="@string/def" />

                <TextView
                    android:id="@+id/shareText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:paddingLeft="4dp"
                    android:text="分享"
                    android:textColor="#888888"
                    android:textSize="12sp" />
            </LinearLayout>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp" 
            android:layout_marginBottom="10dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:orientation="horizontal" >

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/videodetail_likeicon"
                    android:contentDescription="@string/def" />

                <TextView
                    android:id="@+id/video_detail_like_all"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="15dp"
                    android:text="0"
                    android:textColor="#1163a2"
                    android:textSize="12sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="-10dp"
                    android:text="赞"
                    android:textColor="#1163a2"
                    android:textSize="12sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/video_detail_look_all"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="15dp"
                    android:text="0"
                    android:textColor="#888888"
                    android:textSize="12sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="-10dp"
                    android:text="围观"
                    android:textColor="#888888"
                    android:textSize="12sp" />
            </LinearLayout>
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/video_square_has_comment_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <!-- 评论内容 -->

            <LinearLayout
                android:id="@+id/video_detail_comment_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/video_square_author"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:textColor="#888888" />

                <LinearLayout
                    android:id="@+id/video_square_show_all"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="查看所有 "
                        android:textColor="#888888"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/video_square_comment_count"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:textColor="#888888"
                        android:textSize="14sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=" 条评论"
                        android:textColor="#888888"
                        android:textSize="14sp" />
                </LinearLayout>
                <!-- 具体内容 -->

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="10dp" >

                    <TextView
                        android:id="@+id/video_square_comment_first"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:textSize="14sp" 
                        android:textColor="#888888"/>

                    <TextView
                        android:id="@+id/video_square_comment_second"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:textSize="14sp" 
                        android:textColor="#888888"/>

                    <TextView
                        android:id="@+id/video_square_comment_three"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:textSize="14sp" 
                        android:textColor="#888888"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
        <!-- 没有评论 -->

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="60dp"
            android:layout_marginTop="60dp" >
            <TextView
                android:id="@+id/comment_noinput"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="@string/str_comment_no_input"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:visibility="gone"/>
            
            <ImageView
                android:id="@+id/video_square_no_comment_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:src="@drawable/videodetail_sofaicon"
                android:visibility="gone" />
        </RelativeLayout>

        <!-- 外连接 -->

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp" >

            <TextView
                android:id="@+id/video_square_link"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:text="goluk.com"
                android:textColor="#1163a2"
                android:textSize="14sp" />
        </RelativeLayout>
    </LinearLayout>
	<!-- 猛戳我刷新 -->
	<ImageView 
	    android:id="@+id/video_square_detail_click_refresh"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:src="@drawable/qitadifang"
	    android:layout_centerInParent="true"
	    android:visibility="gone"/>
</RelativeLayout>
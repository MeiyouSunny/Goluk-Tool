<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#242629" >

    <TextView
        android:id="@+id/share_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="6dp"
        android:layout_marginTop="6dp"
        android:textColor="#999999"
        android:text="@string/str_share_to_sw"
        android:textSize="18sp" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="6dp"
            android:layout_below="@id/share_text"
            android:layoutAnimation="@anim/layout_animation"
            android:orientation="horizontal" >
			
             <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1" >

                <ImageButton
                    android:id="@+id/wechat_circle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:background="@drawable/share_wechat_friend_icon" />
                
                <TextView 
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/wechat_circle"
                    android:layout_centerHorizontal="true"
                    android:textSize="10sp"
                    android:layout_marginTop="4dp"
                    android:textColor="#666666"
                    android:text="@string/str_circle_of_friends"/>
            </RelativeLayout>
            
            <RelativeLayout
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_weight="1">

                <ImageButton
                    android:id="@+id/wechat"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:background="@drawable/share_wechat_icon" />
                
                <TextView 
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/wechat"
                    android:layout_centerHorizontal="true"
                    android:textSize="10sp"
                    android:layout_marginTop="4dp"
                    android:textColor="#666666"
                    android:text="@string/str_weixin_friends"/>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <ImageButton
                    android:id="@+id/sina"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:background="@drawable/share_weibo_icon" />
                <TextView 
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/sina"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="4dp"
                    android:textSize="10sp"
                    android:textColor="#666666"
                    android:text="@string/str_weibo"/>
            </RelativeLayout> 
			
             <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <ImageButton
                    android:id="@+id/qqZone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:background="@drawable/share_qq_zone_icon" />
                <TextView 
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/qqZone"
                    android:layout_centerHorizontal="true"
                    android:textSize="10sp"
                    android:textColor="#666666"
                    android:layout_marginTop="4dp"
                    android:text="@string/str_qzone"/>
            </RelativeLayout>
            
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <ImageButton
                    android:id="@+id/qq"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:background="@drawable/share_qq_friend_icon" />
                <TextView 
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/qq"
                    android:layout_centerHorizontal="true"
                    android:textSize="10sp"
                    android:textColor="#666666"
                    android:layout_marginTop="4dp"
                    android:text="@string/str_qq_friends"/>
            </RelativeLayout>

        </LinearLayout>

</RelativeLayout>
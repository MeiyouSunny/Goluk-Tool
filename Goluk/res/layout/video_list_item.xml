<?xml version="1.0" encoding="utf-8"?>
<!-- 我的视频item -->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="22dp"
    android:background="#ffffff">
    
    <ImageView 
            android:id="@+id/line"
            android:layout_width="2dp"
           	android:layout_marginLeft="7dp"
           	android:layout_marginRight="12dp"
    		android:layout_height="match_parent"
    		android:visibility="visible"
    		android:background="#eeeeee" />
    
    
<RelativeLayout 
    android:id="@+id/mVideoLayout1"
    android:layout_width="176dp"
    android:layout_height="86dp">

    <ImageView
        android:id="@+id/video_first_needle1"
        android:scaleType="fitXY"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:contentDescription="@string/def" />

    <TextView
        android:id="@+id/video_countTime1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="4dp"
        android:layout_marginTop="4dp"
        android:text="05:00"
        android:textColor="#bfffffff"
        android:textSize="10sp" />
	
    <ImageView
        android:id="@+id/video_quality1"
        android:layout_width="56dp"
        android:layout_height="11.33dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="4dp"
        android:layout_marginTop="4dp"
        android:paddingRight="6dp" />

    <TextView
        android:id="@+id/video_createtime1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:textSize="10sp"
        android:textColor="#bfffffff"
        android:paddingLeft="4dp"
        android:text="星期五    17:20" />
    
    <TextView
        android:id="@+id/video_size1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:textSize="10sp"
        android:textColor="#bfffffff"
        android:paddingRight="4dp"
        android:text="1.5MB" />
    
    <ImageView 
        android:id="@+id/mNewIcon1"
        android:layout_width="10dp"
        android:layout_height="10dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:background="@drawable/video_new_icon" />
    
    <ImageView 
        android:id="@+id/mPreView1"
        android:layout_width="18dp"
        android:layout_height="18dp"
        android:layout_centerInParent="true"
        android:background="@drawable/photo_preview_icon" />

    	<RelativeLayout 
    	    android:id="@+id/mTMLayout1"
    	    android:visibility="gone"
	        android:layout_width="match_parent"
	        android:layout_height="match_parent"
	        android:background="#80000000">
    	    
    	    <ImageView 
    	 	android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_marginRight="4dp"
	        android:layout_marginBottom="22dp"
	        android:layout_alignParentRight="true"
	        android:layout_alignParentBottom="true"
	        android:background="@drawable/flle_edit_hook"/>
    	</RelativeLayout>
</RelativeLayout>

<RelativeLayout 
    android:id="@+id/mVideoLayout2"
    android:layout_toRightOf="@+id/mVideoLayout1"
    android:layout_width="176dp"
    android:layout_height="86dp" >

    <ImageView
        android:id="@+id/video_first_needle2"
        android:scaleType="fitXY"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:contentDescription="@string/def"/>

    <TextView
        android:id="@+id/video_countTime2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="4dp"
        android:layout_marginTop="4dp"
        android:text="05:00"
        android:textColor="#bfffffff"
        android:textSize="10sp" />

    <ImageView
        android:id="@+id/video_quality2"
        android:layout_width="56dp"
        android:layout_height="11.33dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="4dp"
        android:layout_marginTop="4dp"
        android:paddingRight="6dp" />

    <TextView
        android:id="@+id/video_createtime2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:textSize="10sp"
        android:textColor="#bfffffff"
        android:paddingLeft="4dp"
        android:text="星期五    17:20" />
    
    <TextView
        android:id="@+id/video_size2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:textSize="10sp"
        android:textColor="#bfffffff"
        android:paddingRight="4dp"
        android:text="1.5MB" />
    
    <ImageView 
        android:id="@+id/mNewIcon2"
        android:layout_width="10dp"
        android:layout_height="10dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:background="@drawable/video_new_icon" />
    
    <ImageView 
        android:id="@+id/mPreView2"
        android:layout_width="18dp"
        android:layout_height="18dp"
        android:layout_centerInParent="true"
        android:background="@drawable/photo_preview_icon" />

    <RelativeLayout 
    	    android:id="@+id/mTMLayout2"
    	    android:visibility="gone"
	        android:layout_width="match_parent"
	        android:layout_height="match_parent"
	        android:background="#80000000">
    	    
    	    <ImageView 
    	 	android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_marginRight="4dp"
	        android:layout_marginBottom="22dp"
	        android:layout_alignParentRight="true"
	        android:layout_alignParentBottom="true"
	        android:background="@drawable/flle_edit_hook"/>
    	</RelativeLayout>
</RelativeLayout>




</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:gravity="center"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/tab_host_follow_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_gravity="center"
        android:text="@string/str_follow"
        android:textColor="@drawable/tab_host_item_txt_color_selector"
        android:textSize="9sp"
        android:drawablePadding="0dp"
        android:drawableTop="@drawable/tab_host_follow_icon_selector" />
    <ImageView
        android:id="@+id/iv_new_followed_video_tips"
        android:visibility="gone"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@id/tab_host_follow_id"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_marginTop="2dp"
        android:layout_marginLeft="-4dp"
        android:contentDescription="@string/imgdes"
        android:src="@drawable/home_red_point_little"/>

</RelativeLayout>

<?xml version="1.0" encoding="utf-8"?>
<!-- 在线视频播放 -->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:background="@color/bg" >
	
	<!-- 视频播放title -->
	<RelativeLayout
		android:id="@+id/title_layout"
		android:layout_width="match_parent"
		android:layout_height="42dp"
		android:background="@color/bg">
		
		<Button
			android:id="@+id/back_btn"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginLeft="10dp"
			android:gravity="center|left"
			android:drawableLeft="@drawable/icon_back_btn"
			android:drawablePadding="8dp"
			android:background="@color/bg"
			android:textColor="@color/white"
			android:textSize="16sp"
			android:text="@string/back_text"/>
		
		<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_centerInParent="true"
			android:textSize="18sp"
			android:textColor="@color/white"
			android:text="@string/video_play_text"/>
	</RelativeLayout>
	
	<!-- 黑色分割线 -->
	<View
		android:id="@+id/title_solid"
		android:layout_width="match_parent"
		android:layout_height="1dp"
		android:layout_below="@id/title_layout"
		android:background="@color/border_bg"/>
	
	<!-- 视频详情title -->
	<RelativeLayout
		android:id="@+id/video_desc_title"
		android:layout_width="match_parent"
		android:layout_height="48dp"
		android:layout_below="@id/title_solid">
		<!-- 头像 -->
		<ImageView
			android:id="@+id/user_photo"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginLeft="10dp"
			android:layout_marginTop="10dp"
			android:background="@drawable/portrait_bg"
			android:contentDescription="@string/imgdes"/>
		
		<TextView
			android:id="@+id/user_name"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginLeft="8dp"
			android:layout_marginTop="-5dp"
			android:layout_toRightOf="@id/user_photo"
			android:layout_alignTop="@id/user_photo"
			android:text="Jasmine Flower"
			android:textColor="@color/white"
			android:textSize="16sp"/>
		
		<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginTop="-5dp"
			android:layout_alignLeft="@id/user_name"
			android:layout_below="@id/user_name"
			android:text="11-12"
			android:textSize="12sp"
			android:textColor="#5D5D5D"/>
	</RelativeLayout>
	
	<!-- 视频播放 -->
	<RelativeLayout
		android:id="@+id/video_play_layout"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_below="@id/video_desc_title"
		android:background="@color/bg">
		
		<!-- 视频播放容器 -->
		<SurfaceView
			android:id="@+id/video_surface"
			android:layout_width="match_parent"
			android:layout_height="204dp">
		</SurfaceView>
		
		<!-- 控制视频播放暂停 -->
		<RelativeLayout
			android:id="@+id/play_layout"
			android:layout_width="match_parent"
			android:layout_height="204dp">
			<!-- 视频播放按钮 -->
			<ImageView
				android:id="@+id/play_image"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_centerInParent="true"
				android:contentDescription="@string/imgdes"
				android:background="@drawable/video_play_btn"
				android:visibility="gone"/>
		</RelativeLayout>
	</RelativeLayout>
	
	<!-- 评论 -->
	<include
		android:id="@+id/video_comment_tab_layout"
		android:layout_width="match_parent"
		android:layout_height="62dp"
		android:layout_below="@id/video_play_layout"
		layout="@layout/video_play_comment" />
	
	<!-- 评论列表 -->
	<!-- 
	<cn.com.mobnote.view.PullToRefreshView
		android:id="@+id/search_channel_pull_refresh_view"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:orientation="vertical" >
	</cn.com.mobnote.view.PullToRefreshView>
	
	<ScrollView
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:scrollbars="none">
	</ScrollView>
	 -->
	<ListView
		android:id="@+id/video_comment_listview"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:paddingBottom="58dp"
		android:layout_below="@id/video_comment_tab_layout"
		android:scrollbars="none" >
	</ListView>
	
	<!-- 评论 -->
	<RelativeLayout
		android:id="@+id/video_comment_layout"
		android:layout_width="match_parent"
		android:layout_height="58dp"
		android:layout_alignParentBottom="true"
		android:background="#131313">
		
		<ImageButton
			android:id="@+id/comment_feel"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginLeft="10dp"
			android:layout_centerVertical="true"
			android:background="@drawable/countenance"
			android:contentDescription="@string/imgdes"/>
		
		<Button
			android:id="@+id/comment_send_btn"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_alignParentRight="true"
			android:layout_centerVertical="true"
			android:background="#131313"
			android:textSize="18sp"
			android:textColor="@color/white"
			android:text="@string/video_play_comment_send"/>
		
		<EditText
			android:id="@+id/share_desc"
			android:layout_width="match_parent"
			android:layout_height="35dp"
			android:layout_marginLeft="10dp"
			android:layout_toRightOf="@id/comment_feel"
			android:layout_toLeftOf="@id/comment_send_btn"
			android:background="@drawable/text_bg"
			android:layout_centerVertical="true"
			android:textColor="#5D5D5D"
			android:textSize="16sp"
			android:hint="@string/video_play_comment_text"
			android:inputType="text" />
		
	</RelativeLayout>
	
</RelativeLayout>














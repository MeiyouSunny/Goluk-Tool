<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/user_login_bg"
    android:orientation="vertical" >

    <!-- title -->
    <include layout="@layout/user_title"/>
    <!-- body -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="20dp" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:text="@string/opinion_suggest"
            android:textColor="@color/unbind_camera_wifi_hint_text_color"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/opinion_layout_suggest_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="(0/500)"
            android:textColor="@color/unbind_camera_wifi_hint_text_color"
            android:textSize="14sp" />
    </RelativeLayout>

    <View
        android:id="@+id/soild_1"
        android:layout_width="wrap_content"
        android:layout_height="1dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/solid" />

    <EditText
        android:id="@+id/opinion_layout_suggest_edit"
        android:layout_width="match_parent"
        android:layout_height="168dp"
        android:paddingTop="8dp"
        android:background="@color/white"
        android:hint="@string/option_suggest_hint"
        android:textColor="@color/unbind_camera_wifi_hint_text_color"
        android:textSize="14sp"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:maxLength="500"
        android:gravity="top|left"/>

    <View
        android:id="@+id/soild_2"
        android:layout_width="wrap_content"
        android:layout_height="1dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/solid" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:text="@string/opinion_connection"
            android:textColor="@color/unbind_camera_wifi_hint_text_color"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/opinion_layout_connection_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="(0/70)"
            android:textColor="@color/unbind_camera_wifi_hint_text_color"
            android:textSize="14sp" />
    </RelativeLayout>

    <View
        android:id="@+id/soild_3"
        android:layout_width="wrap_content"
        android:layout_height="1dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/solid" />

    <EditText
        android:id="@+id/opinion_layout_connection_edit"
        android:layout_width="match_parent"
        android:layout_height="84dp"
        android:paddingTop="8dp"
        android:background="@color/white"
        android:hint="@string/option_connection_hint"
        android:textColor="@color/unbind_camera_wifi_hint_text_color"
        android:textSize="14sp" 
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:maxLength="70"
        android:gravity="top|left"/>

    <View
        android:id="@+id/soild_4"
        android:layout_width="wrap_content"
        android:layout_height="1dp"
        android:background="@drawable/solid" />

</LinearLayout>
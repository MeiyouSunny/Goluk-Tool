<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/user_login_bg"
    android:orientation="vertical" >

    <!-- title -->

    <include layout="@layout/user_title" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <!-- 意见类型 -->

            <LinearLayout
                android:id="@+id/user_opinion_select_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="10dp"
                android:paddingRight="10dp"
                android:orientation="horizontal" >

                <Button
                    android:id="@+id/user_opinion_select_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:text="@string/user_opinion_type_select"
                    android:textColor="@color/unbind_camera_wifi_hint_text_color"
                    android:textSize="14sp"
                    android:drawablePadding="5dp"
                    android:drawableRight="@drawable/opinion_select_icon" />
            </LinearLayout>
            <!-- body -->

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginTop="5dp" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:text="@string/opinion_suggest"
                    android:textColor="@color/unbind_camera_wifi_hint_text_color"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/opinion_layout_suggest_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:text="(0/500)"
                    android:textColor="@color/unbind_camera_wifi_hint_text_color"
                    android:textSize="14sp" />
            </RelativeLayout>

            <View
                android:id="@+id/soild_1"
                android:layout_width="wrap_content"
                android:layout_height="1dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/solid" />

            <EditText
                android:id="@+id/opinion_layout_suggest_edit"
                android:layout_width="match_parent"
                android:layout_height="168dp"
                android:background="@color/white"
                android:gravity="top|left"
                android:hint="@string/option_suggest_hint"
                android:maxLength="500"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:paddingTop="8dp"
                android:textColor="@color/unbind_camera_wifi_hint_text_color"
                android:textCursorDrawable="@drawable/cursor_color"
                android:textSize="14sp" />

            <View
                android:id="@+id/soild_2"
                android:layout_width="wrap_content"
                android:layout_height="1dp"
                android:layout_marginBottom="20dp"
                android:background="@drawable/solid" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:text="@string/opinion_connection"
                    android:textColor="@color/unbind_camera_wifi_hint_text_color"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/opinion_layout_connection_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:text="(0/70)"
                    android:textColor="@color/unbind_camera_wifi_hint_text_color"
                    android:textSize="14sp" />
            </RelativeLayout>

            <View
                android:id="@+id/soild_3"
                android:layout_width="wrap_content"
                android:layout_height="1dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/solid" />

            <EditText
                android:id="@+id/opinion_layout_connection_edit"
                android:layout_width="match_parent"
                android:layout_height="84dp"
                android:background="@color/white"
                android:gravity="top|left"
                android:hint="@string/option_connection_hint"
                android:maxLength="70"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:paddingTop="8dp"
                android:textColor="@color/unbind_camera_wifi_hint_text_color"
                android:textCursorDrawable="@drawable/cursor_color"
                android:textSize="14sp" />

            <View
                android:id="@+id/soild_4"
                android:layout_width="wrap_content"
                android:layout_height="1dp"
                android:background="@drawable/solid" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>
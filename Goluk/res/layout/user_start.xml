<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    	<cn.com.mobnote.golukmobile.carrecorder.view.CustomVideoView
    	    android:id="@+id/videoStart"
    	    android:layout_width="match_parent"
    	    android:layout_height="match_parent" />
    	<ImageView
            android:id="@+id/click_close_btn"
            android:layout_width="35dp"
            android:layout_height="33dp"
            android:layout_alignParentRight="true"
            android:layout_marginTop="10dp"
            android:background="@drawable/btn_close_image" />

		<LinearLayout 
		    android:id="@+id/user_start_click"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:orientation="vertical"
		    android:layout_alignParentBottom="true"
		    android:layout_centerHorizontal="true"
		    android:layout_marginBottom="94dp">
		    <ImageView 
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:id="@+id/user_start_have"
		        android:background="@drawable/icon_log"
		        />
		    <ImageView 
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:id="@+id/user_start_look"
		        android:background="@drawable/icon_look"
		        android:layout_marginTop="20dp"
		        />
		</LinearLayout>
</RelativeLayout>

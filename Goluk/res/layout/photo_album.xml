<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff" >

    <!-- 标题栏 -->

    <RelativeLayout
        android:id="@+id/title_layout"
        android:layout_width="match_parent"
        android:layout_height="46dp"
        android:background="@color/photoalbum_title_bg_color" >

        <ImageButton
            android:id="@+id/mBackBtn"
            android:layout_width="36.66dp"
            android:layout_height="36.66dp"
            android:layout_centerVertical="true"
            android:background="@drawable/cross_screen_arrow_icon1"
            android:contentDescription="@string/def" />

        <TextView
            android:id="@+id/mTitleName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_centerVertical="true"
            android:text="@string/photoalbum_default_title"
            android:textColor="@color/white"
            android:textSize="16sp" />

        <!-- 编辑按钮 -->

        <Button
            android:id="@+id/mEditBtn"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_centerInParent="true"
            android:background="#00000000"
            android:paddingLeft="20dp"
            android:paddingRight="10dp"
            android:text="@string/videolist_edit"
            android:textColor="#0080ff"
            android:textSize="14sp" />
    </RelativeLayout>

    <!-- 底部布局 -->

    <RelativeLayout
        android:id="@+id/bottomLayout"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:background="#ffffff" >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/photoalbum_line_color" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal" >

            <LinearLayout
                android:id="@+id/mLocalVideoBtn"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical" >

                <ImageView
                    android:id="@+id/mLocalIcon"
                    android:layout_width="27.33dp"
                    android:layout_height="20.66dp"
                    android:background="@drawable/my_video_press" />

                <TextView
                    android:id="@+id/mLocalText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:paddingTop="5dp"
                    android:text="@string/photoalbum_local_video_text"
                    android:textColor="@color/photoalbum_text_color"
                    android:textSize="10sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/mCloudVideoBtn"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical" >

                <ImageView
                    android:id="@+id/mCloudIcon"
                    android:layout_width="27.33dp"
                    android:layout_height="20.66dp"
                    android:background="@drawable/my_cloud" />

                <TextView
                    android:id="@+id/mCloudText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:paddingTop="5dp"
                    android:text="@string/photoalbum_cloud_video_text"
                    android:textColor="@color/photoalbum_icon_color_gray"
                    android:textSize="10sp" />
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/mMainLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/bottomLayout"
        android:layout_below="@+id/title_layout" >
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/mEditLayout"
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:layout_alignParentBottom="true"
        android:background="#f8f8f8"
        android:visibility="gone" >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/photoalbum_line_color" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal" >

            <LinearLayout
                android:id="@+id/mDownLoadBtn"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical" >

                <ImageView
                    android:id="@+id/mDownLoadIcon"
                    android:layout_width="19.33dp"
                    android:layout_height="26.66dp"
                    android:background="@drawable/photo_download_icon"
                    android:duplicateParentState="true" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/mDeleteBtn"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical" >

                <ImageView
                    android:id="@+id/mDeleteIcon"
                    android:layout_width="18.66dp"
                    android:layout_height="25.33dp"
                    android:background="@drawable/select_video_del_icon"
                    android:duplicateParentState="true" />
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>

</RelativeLayout>
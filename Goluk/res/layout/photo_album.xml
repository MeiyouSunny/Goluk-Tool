<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/ll_tabs"
        android:layout_width="match_parent"
        android:layout_height="46dp"
        android:background="#242629">

        <LinearLayout
            android:id="@+id/tab_type"
            android:layout_width="225dp"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/tab_local"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#0080ff"
                android:layout_weight="1"
                android:text="@string/str_local_title"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tab_wonderful"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="#ffffff"
                android:gravity="center"
                android:text="@string/str_wonderful_title"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tab_urgent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="#ffffff"
                android:gravity="center"
                android:text="@string/str_urgent_title"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tab_loop"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="#ffffff"
                android:gravity="center"
                android:text="@string/str_loop_title"
                android:textSize="16sp" />
        </LinearLayout>

        <ImageView
            android:id="@+id/edit_btn"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="15dp"
            android:background="@drawable/photo_edit"/>
    </RelativeLayout>

    <android.support.v4.view.ViewPager
        android:id="@+id/viewpager"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >
    </android.support.v4.view.ViewPager>

    <RelativeLayout
        android:id="@+id/bottomLayout"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="#ffffff" >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/photoalbum_line_color" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal" >

            <LinearLayout
                android:id="@+id/mLocalVideoBtn"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical" >

                <ImageView
                    android:id="@+id/mLocalIcon"
                    android:layout_width="27.33dp"
                    android:layout_height="20.66dp"
                    android:background="@drawable/my_video_press" />

                <TextView
                    android:id="@+id/mLocalText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:paddingTop="5dp"
                    android:text="@string/photoalbum_local_video_text"
                    android:textColor="@color/photoalbum_text_color"
                    android:textSize="10sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/mCloudVideoBtn"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical" >

                <ImageView
                    android:id="@+id/mCloudIcon"
                    android:layout_width="27.33dp"
                    android:layout_height="20.66dp"
                    android:background="@drawable/my_cloud" />

                <TextView
                    android:id="@+id/mCloudText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:paddingTop="5dp"
                    android:text="@string/photoalbum_cloud_video_text"
                    android:textColor="@color/photoalbum_icon_color_gray"
                    android:textSize="10sp" />
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/mEditLayout"
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:background="#f8f8f8"
        android:visibility="gone" >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/photoalbum_line_color" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal" >

            <LinearLayout
                android:id="@+id/mDownLoadBtn"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical" >

                <ImageView
                    android:id="@+id/mDownLoadIcon"
                    android:layout_width="19.33dp"
                    android:layout_height="26.66dp"
                    android:background="@drawable/photo_download_icon"
                    android:duplicateParentState="true" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/mDeleteBtn"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical" >

                <ImageView
                    android:id="@+id/mDeleteIcon"
                    android:layout_width="18.66dp"
                    android:layout_height="25.33dp"
                    android:background="@drawable/select_video_del_icon"
                    android:duplicateParentState="true" />
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>

</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff">

    <!-- 标题栏 -->
    <RelativeLayout
        android:id="@+id/title_layout"
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:background="@color/photoalbum_title_bg_color" >

        <ImageButton
            android:id="@+id/mBackBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:background="@drawable/live_btn_back" 
            android:contentDescription="@string/def"/>

        <TextView
            android:id="@+id/mTitleName"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/photoalbum_default_title"
            android:textColor="@color/white"
            android:textSize="16sp" />

        <Button
            android:id="@+id/mEditBtn"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_centerInParent="true"
            android:paddingLeft="20dp"
            android:paddingRight="10dp"
            android:background="#00000000"
            android:text="@string/videolist_edit"
            android:textColor="@color/white"
            android:textSize="14sp" />
    </RelativeLayout>
    
    <!-- 底部布局 -->
    <RelativeLayout 
    android:id="@+id/bottomLayout"
    android:layout_alignParentBottom="true"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:background="#ffffff">
        <TextView 
            android:layout_width="match_parent"
    		android:layout_height="1dp"
    		android:background="@color/photoalbum_line_color" />
   	
    	<LinearLayout 
    	    android:orientation="horizontal"
    	    android:layout_width="match_parent"
    		android:layout_height="match_parent">
    	    
    	    <LinearLayout 
  	        android:id="@+id/mLocalVideoBtn"
   	        android:gravity="center"
   	        android:layout_weight="1"
    	    android:orientation="vertical"
    	    android:layout_width="match_parent"
    		android:layout_height="match_parent">
				<ImageView 
				    android:id="@+id/mLocalIcon"
				    android:layout_width="27.33dp"
    				android:layout_height="20.66dp"
    				android:background="@drawable/my_video_press"/>
				<TextView 
				    android:id="@+id/mLocalText"
				    android:text="@string/photoalbum_local_video_text"
				    android:gravity="center"
				    android:textSize="10sp"
				    android:textColor="@color/photoalbum_text_color"
				    android:paddingTop="5dp"
				    android:layout_width="match_parent"
    				android:layout_height="wrap_content"/>
    		</LinearLayout>
    		
    	    <LinearLayout 
  	        android:id="@+id/mCloudVideoBtn"
   	        android:gravity="center"
   	        android:layout_weight="1"
    	    android:orientation="vertical"
    	    android:layout_width="match_parent"
    		android:layout_height="match_parent">
				<ImageView 
				    android:id="@+id/mCloudIcon"
				    android:layout_width="27.33dp"
    				android:layout_height="20.66dp"
    				android:background="@drawable/my_cloud"/>
				<TextView 
				    android:id="@+id/mCloudText"
				    android:text="@string/photoalbum_cloud_video_text"
				    android:gravity="center"
				    android:textSize="10sp"
				    android:textColor="@color/photoalbum_icon_color_gray"
				    android:paddingTop="5dp"
				    android:layout_width="match_parent"
    				android:layout_height="wrap_content"/>
    		</LinearLayout>
    	    
    	</LinearLayout>
   	     
    </RelativeLayout>
    
    <RelativeLayout 
        android:id="@+id/mMainLayout"
        android:layout_width="match_parent"
	    android:layout_height="match_parent"
		android:layout_above="@+id/bottomLayout"
	    android:layout_below="@+id/title_layout" 
        ></RelativeLayout>
    
    <RelativeLayout 
    android:id="@+id/mEditLayout"
    android:visibility="gone"
    android:layout_alignParentBottom="true"
    android:layout_width="match_parent"
    android:layout_height="42dp"
    android:background="#f8f8f8">
        <TextView 
            android:layout_width="match_parent"
    		android:layout_height="1dp"
    		android:background="@color/photoalbum_line_color" />
   	
    	<LinearLayout 
    	    android:orientation="horizontal"
    	    android:layout_width="match_parent"
    		android:layout_height="match_parent">
    	    
    	    <LinearLayout 
   	        android:id="@+id/mDownLoadBtn"
   	        android:gravity="center"
   	        android:layout_weight="1"
    	    android:orientation="vertical"
    	    android:layout_width="match_parent"
    		android:layout_height="match_parent">
				<ImageView 
				    android:id="@+id/mDownLoadIcon"
				    android:layout_width="19.33dp"
    				android:layout_height="26.66dp"
    				android:duplicateParentState="true"
    				android:background="@drawable/photo_download_icon"/>
			</LinearLayout>
    		
    	    <LinearLayout 
    	    android:id="@+id/mDeleteBtn"
   	        android:gravity="center"
   	        android:layout_weight="1"
    	    android:orientation="vertical"
    	    android:layout_width="match_parent"
    		android:layout_height="match_parent">
				<ImageView 
				    android:id="@+id/mDeleteIcon"
				    android:layout_width="18.66dp"
    				android:layout_height="25.33dp"
    				android:duplicateParentState="true"
    				android:background="@drawable/select_video_del_icon"/>
    		</LinearLayout>
    	    
    	</LinearLayout>
   	     
    </RelativeLayout>
        
 </RelativeLayout>
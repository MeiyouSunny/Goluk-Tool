<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    android:background="@color/user_login_bg">
    
		<!-- 个人资料title -->
		<include layout="@layout/user_personal_info_title"/>
		
		<!-- body -->
		<!-- 用户信息 -->
		<LinearLayout 
		    android:layout_width="match_parent"
		    android:layout_height="66dp"
		    android:layout_marginTop="26dp"
		    android:orientation="vertical"
		    android:background="@color/white"
		    >
		    <View
		        android:id="@+id/user_personal_solid_1"
		        android:layout_width="wrap_content"
		        android:layout_height="1dp"
		        android:background="@drawable/solid" />
		    
		    <RelativeLayout 
		        android:layout_width="match_parent"
		        android:layout_height="66dp"
		        android:layout_marginLeft="18dp"
		        android:layout_marginRight="18dp"
		        >
		        <ImageView 
		   	        android:layout_width="wrap_content"
		   	        android:layout_height="wrap_content"
		   	        android:id="@+id/user_personal_info_image"
		   	        android:background="@drawable/individual_center_headbg_frame"
		   	        android:layout_alignParentLeft="true"
		   	        android:layout_centerVertical="true"
	   	        	/>
		        <LinearLayout 
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:orientation="vertical"
		            android:layout_toRightOf="@id/user_personal_info_image"
		            android:layout_centerVertical="true"
		            android:layout_marginLeft="10dp"
		            >
		            <TextView 
		                android:layout_width="wrap_content"
		                android:layout_height="wrap_content"
		                android:textSize="18sp"
		                android:id="@+id/user_personal_info_name"
		                android:textColor="@color/user_personal_black"
		                />
		            <LinearLayout 
		                android:layout_width="wrap_content"
		                android:layout_height="wrap_content"
		                >
		                <TextView 
		                android:layout_width="wrap_content"
		                android:layout_height="wrap_content"
		                android:textColor="@color/user_personal_gray"
		                android:text="ID:"
		                android:textSize="16sp"
		                />
		                <TextView 
		                android:layout_width="wrap_content"
		                android:layout_height="wrap_content"
		                android:id="@+id/user_personal_info_id"
		                android:textColor="@color/user_personal_gray"
		                android:textSize="16sp"
		                />
		            </LinearLayout>
		        </LinearLayout>
		        <!-- <ImageView 
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:id="@+id/user_personal_info_share"
		            android:src="@drawable/individual_center_share_icon"
		            android:layout_alignParentRight="true"
		            android:layout_centerVertical="true"
		            /> -->
		    </RelativeLayout>
		    <View
		        android:id="@+id/user_personal_solid_2"
		        android:layout_width="wrap_content"
		        android:layout_height="1dp"
		        android:background="@drawable/solid" />
		</LinearLayout>
		
		<!-- 个性签名   没有签名则不显示此项内容-->
		<LinearLayout 
		    android:layout_width="match_parent"
		    android:layout_height="wrap_content"
		    android:layout_marginTop="38dp"
		    android:background="@color/white"
		    android:paddingLeft="18dp"
		    android:paddingRight="18dp"
		    android:id="@+id/user_personal_info_all"
		    android:orientation="vertical"
		    >
		    <View
		        android:id="@+id/user_personal_solid_3"
		        android:layout_width="wrap_content"
		        android:layout_height="1dp"
		        android:background="@drawable/solid" />
		    <TextView 
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:text="@string/user_personal_edit_sign"
		        android:layout_marginTop="12dp"
		        android:layout_marginBottom="12dp"
		        android:textSize="16sp"
		        android:textColor="@color/user_personal_gray"
		        />
		    <TextView 
		        android:layout_width="match_parent"
		        android:layout_height="wrap_content"
		        android:layout_marginBottom="12dp"
		        android:id="@+id/user_personal_info_sing_text"
		        android:textColor="@color/user_personal_black"
		        android:textSize="18sp"
		        android:hint="介绍一下自己吧！"
		        />
		</LinearLayout>
		<!-- 性别 -->
		<LinearLayout 
		    android:layout_width="match_parent"
		    android:layout_height="50dp"
		    android:orientation="vertical"
		    android:background="@color/white"
		    >
		    <View
		        android:id="@+id/user_personal_solid_4"
		        android:layout_width="wrap_content"
		        android:layout_height="1dp"
		        android:background="@drawable/solid" />
		    <RelativeLayout 
		        android:layout_width="match_parent"
		        android:layout_height="50dp"
		        android:layout_marginLeft="18dp"
		        android:layout_marginRight="18dp"
		        >
		        <TextView 
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:text="@string/user_personal_edit_sex"
		            android:layout_alignParentLeft="true"
		            android:layout_centerVertical="true"
		            android:textColor="@color/user_personal_gray"
		            android:textSize="16sp"
		            />
		        <TextView 
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:id="@+id/user_personal_info_sex_text"
		            android:layout_alignParentRight="true"
		            android:layout_centerVertical="true"
		            android:textSize="18sp"
		            android:textColor="@color/user_personal_black"
		            />
		    </RelativeLayout>
		</LinearLayout>
		

<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:background="#232323">
	
	<!-- 视频显示图片 -->
	<ImageButton
		android:id="@+id/online_video_img"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:layout_centerInParent="true"
		android:background="@drawable/icon_default"
		android:contentDescription="@string/imgdes"/>
	
	<!-- 视频播放按钮 -->
	<ImageButton
		android:id="@+id/online_video_play_btn"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_centerInParent="true"
		android:contentDescription="@string/imgdes"
		android:background="@drawable/video_play_btn"/>
	
	<!-- 视频描述 -->
	<TextView
		android:id="@+id/online_video_desc"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_marginLeft="14dp"
		android:layout_marginBottom="10dp"
		android:layout_alignParentBottom="true"
		android:textColor="@color/white"
		android:textSize="10sp"
		android:text=""/>
</RelativeLayout>
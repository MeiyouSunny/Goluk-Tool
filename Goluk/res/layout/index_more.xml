<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/login_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/user_login_bg"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/title_layout"
        android:layout_width="match_parent"
        android:layout_height="46dp"
        android:background="#313131" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/video_more"
            android:textColor="#fff"
            android:textSize="18sp" />
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <View
                android:id="@+id/user_personal_solid_1"
                android:layout_width="wrap_content"
                android:layout_height="1dp"
                android:layout_marginTop="16dp"
                android:background="@drawable/solid" />
            <!-- 个人中心 -->

            <RelativeLayout
                android:id="@+id/user_center_item"
                android:layout_width="match_parent"
                android:layout_height="82dp"
                android:background="#f4f4f4"
                android:gravity="center"
                android:paddingLeft="14dp"
                android:paddingRight="14dp" >

                <ImageView
                    android:id="@+id/user_center_head"
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:layout_centerVertical="true"
                    android:contentDescription="@string/imgdes" />
                
                <ImageView
                    android:id="@+id/im_user_center_head_authentication"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@id/user_center_head"
                    android:layout_alignRight="@id/user_center_head"
                    android:contentDescription="@string/imgdes" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_marginBottom="5dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="15dp"
                    android:layout_marginTop="5dp"
                    android:layout_toRightOf="@id/user_center_head"
                    android:orientation="vertical" >

                    <TextView
                        android:id="@+id/user_center_name_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#1163a2"
                        android:textSize="16sp" />

                    <RelativeLayout
                        android:id="@+id/user_center_id_layout"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp" >

                        <TextView
                            android:id="@+id/user_center_id_title_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="极路客："
                            android:textColor="#585858"
                            android:textSize="14sp"
                            android:visibility="gone" />

                        <TextView
                            android:id="@+id/user_center_id_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_toRightOf="@id/user_center_id_title_text"
                            android:ellipsize="end"
                            android:maxLines="1"
                            android:textColor="@color/user_login_text"
                            android:textSize="14sp" />
                    </RelativeLayout>
                </LinearLayout>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/editor_arrow" />
            </RelativeLayout>

            <LinearLayout
                android:id="@+id/user_center_video_layout"
                android:layout_width="match_parent"
                android:layout_height="42dp"
                android:background="#f4f4f4"
                android:gravity="center_vertical"
                android:orientation="horizontal" >

                <LinearLayout
                    android:id="@+id/user_share"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical" >

                    <TextView
                        android:id="@+id/user_share_count"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:textColor="@color/user_login_text"
                        android:textSize="14sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="分享视频"
                        android:textColor="@color/live_time_desc"
                        android:textSize="12sp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/user_praise"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical" >

                    <TextView
                        android:id="@+id/user_praise_count"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:textColor="@color/user_login_text"
                        android:textSize="14sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="赞我的人"
                        android:textColor="@color/live_time_desc"
                        android:textSize="12sp" />
                </LinearLayout>
            </LinearLayout>

            <View
                android:id="@+id/user_personal_solid_2"
                android:layout_width="wrap_content"
                android:layout_height="1dp"
                android:background="@drawable/solid" />
            
            <!-- 我的收益 -->
            <View
                android:id="@+id/user_personal_solid_17"
                android:layout_width="wrap_content"
                android:layout_height="1dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/solid" />

            <RelativeLayout
                android:id="@+id/profit_item"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:paddingLeft="14dp"
                android:paddingRight="14dp" 
                android:background="#f4f4f4">

                <ImageView
                    android:id="@+id/profit_img"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:background="@drawable/profit_icon_profit"
                    android:contentDescription="@string/imgdes" />

                <TextView
                    android:id="@+id/profit_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@id/profit_img"
                    android:text="@string/my_profit_title_text"
                    android:textColor="#333333"
                    android:textSize="14sp" />

                <ImageView
                    android:id="@+id/profit_arrow"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:background="@drawable/editor_arrow"
                    android:contentDescription="@string/imgdes" />
                
                <!-- <TextView 
                    android:id="@+id/profit_hint"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toLeftOf="@id/profit_arrow"
                    android:layout_marginRight="5dp"
                    android:layout_centerVertical="true"
                    android:text="上一次收入０G币"
                    android:textColor="#cccccc"/> -->
            </RelativeLayout>

            <View
                android:id="@+id/user_personal_solid_18"
                android:layout_width="wrap_content"
                android:layout_height="1dp"
                android:background="@drawable/solid" />
            
            <!-- 我的相册 -->

            <View
                android:id="@+id/user_personal_solid_3"
                android:layout_width="wrap_content"
                android:layout_height="1dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/solid" />

            <RelativeLayout
                android:id="@+id/video_item"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="#f4f4f4"
                android:paddingLeft="14dp"
                android:paddingRight="14dp" >

                <ImageView
                    android:id="@+id/video_img"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:background="@drawable/my_video_icon"
                    android:contentDescription="@string/imgdes" />

                <TextView
                    android:id="@+id/video_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@id/video_img"
                    android:text="@string/my_video_title_text"
                    android:textColor="#333333"
                    android:textSize="14sp" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:background="@drawable/editor_arrow"
                    android:contentDescription="@string/imgdes" />
            </RelativeLayout>

            <View
                android:id="@+id/user_personal_solid_4"
                android:layout_width="wrap_content"
                android:layout_height="1dp"
                android:background="@drawable/solid" />
            <!-- 摄像头管理 -->

            <View
                android:id="@+id/user_personal_solid_5"
                android:layout_width="wrap_content"
                android:layout_height="1dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/solid" />

            <RelativeLayout
                android:id="@+id/camera_item"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="#f4f4f4"
                android:paddingLeft="14dp"
                android:paddingRight="14dp" >

                <ImageView
                    android:id="@+id/carmera_img"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:background="@drawable/my_camera_icon"
                    android:contentDescription="@string/imgdes" />

                <TextView
                    android:id="@+id/camera_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@id/carmera_img"
                    android:text="@string/my_camera_title_text"
                    android:textColor="#333333"
                    android:textSize="14sp" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:background="@drawable/editor_arrow"
                    android:contentDescription="@string/imgdes" />
            </RelativeLayout>

            <!-- 通用设置 -->

            <View
                android:id="@+id/user_personal_solid_7"
                android:layout_width="wrap_content"
                android:layout_height="1dp"
                android:background="@drawable/solid" />

            <RelativeLayout
                android:id="@+id/set_item"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="#f4f4f4"
                android:paddingLeft="14dp"
                android:paddingRight="14dp" >

                <ImageView
                    android:id="@+id/set_img"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:background="@drawable/my_set_icon"
                    android:contentDescription="@string/imgdes" />

                <TextView
                    android:id="@+id/set_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@id/set_img"
                    android:text="@string/my_set_title_text"
                    android:textColor="#333333"
                    android:textSize="14sp" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:background="@drawable/editor_arrow"
                    android:contentDescription="@string/imgdes" />
            </RelativeLayout>

            <View
                android:id="@+id/user_personal_solid_8"
                android:layout_width="wrap_content"
                android:layout_height="1dp"
                android:background="@drawable/solid" />
            <!-- 极路客小技巧 -->

            <View
                android:id="@+id/user_personal_solid_9"
                android:layout_width="wrap_content"
                android:layout_height="1dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/solid" />

            <RelativeLayout
                android:id="@+id/skill_item"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="#f4f4f4"
                android:paddingLeft="14dp"
                android:paddingRight="14dp" >

                <ImageView
                    android:id="@+id/skill_img"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:background="@drawable/my_skill_icon"
                    android:contentDescription="@string/imgdes" />

                <TextView
                    android:id="@+id/skill_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@id/skill_img"
                    android:text="@string/my_skill_title_text"
                    android:textColor="#333333"
                    android:textSize="14sp" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:background="@drawable/editor_arrow"
                    android:contentDescription="@string/imgdes" />
            </RelativeLayout>

            <!-- 安装指导 -->

            <View
                android:id="@+id/user_personal_solid_11"
                android:layout_width="wrap_content"
                android:layout_height="1dp"
                android:background="@drawable/solid" />

            <RelativeLayout
                android:id="@+id/install_item"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="#f4f4f4"
                android:paddingLeft="14dp"
                android:paddingRight="14dp" >

                <ImageView
                    android:id="@+id/install_img"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:background="@drawable/my_futou_icon"
                    android:contentDescription="@string/imgdes" />

                <TextView
                    android:id="@+id/install_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@id/install_img"
                    android:text="@string/my_install_title_text"
                    android:textColor="#333333"
                    android:textSize="14sp" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:background="@drawable/editor_arrow"
                    android:contentDescription="@string/imgdes" />
            </RelativeLayout>

            <!-- 版本信息 -->

            <View
                android:id="@+id/user_personal_solid_13"
                android:layout_width="wrap_content"
                android:layout_height="1dp"
                android:background="@drawable/solid" />

            <RelativeLayout
                android:id="@+id/question_item"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="#f4f4f4"
                android:paddingLeft="14dp"
                android:paddingRight="14dp" >

                <ImageView
                    android:id="@+id/question_img"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:background="@drawable/my_question_icon"
                    android:contentDescription="@string/imgdes" />

                <TextView
                    android:id="@+id/question_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@id/question_img"
                    android:text="@string/my_question_title_text"
                    android:textColor="#333333"
                    android:textSize="14sp" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:background="@drawable/editor_arrow"
                    android:contentDescription="@string/imgdes" />
            </RelativeLayout>

            <View
                android:id="@+id/user_personal_solid_14"
                android:layout_width="wrap_content"
                android:layout_height="1dp"
                android:background="@drawable/solid" />
            <!-- 购买极路客 -->

            <View
                android:id="@+id/user_personal_solid_15"
                android:layout_width="wrap_content"
                android:layout_height="1dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/solid" />

            <RelativeLayout
                android:id="@+id/shopping_item"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="#f4f4f4"
                android:paddingLeft="14dp"
                android:paddingRight="14dp" >

                <ImageView
                    android:id="@+id/shopping_img"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:background="@drawable/my_shopping_car_icon"
                    android:contentDescription="@string/imgdes" />

                <TextView
                    android:id="@+id/shopping_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@id/shopping_img"
                    android:text="@string/my_shopping_title_text"
                    android:textColor="#333333"
                    android:textSize="14sp" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:background="@drawable/editor_arrow"
                    android:contentDescription="@string/imgdes" />
            </RelativeLayout>

            <View
                android:id="@+id/user_personal_solid_16"
                android:layout_width="wrap_content"
                android:layout_height="1dp"
                android:layout_marginBottom="14dp"
                android:background="@drawable/solid" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<!-- 视频直播详情 -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:background="@color/white"
	android:orientation="vertical" >
	
	<!-- 视频播放title -->
	<RelativeLayout
		android:id="@+id/title_layout"
		android:layout_width="match_parent"
		android:layout_height="42dp"
		android:background="@color/bg">
		
		<Button
			android:id="@+id/back_btn"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginLeft="10dp"
			android:gravity="center|left"
			android:drawableLeft="@drawable/icon_back_btn"
			android:drawablePadding="8dp"
			android:background="@color/bg"
			android:textColor="@color/white"
			android:textSize="16sp"
			android:text="@string/back_text"/>
		
		<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_centerInParent="true"
			android:textSize="18sp"
			android:textColor="@color/white"
			android:text="@string/video_live_title_text"/>
		
		<Button
			android:id="@+id/refirsh_btn"
			android:layout_width="45dp"
			android:layout_height="wrap_content"
			android:paddingRight="12dp"
			android:layout_centerInParent="true"
			android:layout_alignParentRight="true"
			android:background="@color/bg"
			android:drawableRight="@drawable/refresh"/>
	</RelativeLayout>
	
	<!-- 黑色分割线 -->
	<View
		android:id="@+id/title_solid"
		android:layout_width="match_parent"
		android:layout_height="1dp"
		android:background="@color/border_bg"/>
	
	<!-- 滚动区间 -->
	<ScrollView
		android:id="@+id/video_live_scroll"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:scrollbars="none" >
		
		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:orientation="vertical">
		
			<!-- 视频详情title -->
			<RelativeLayout
				android:id="@+id/video_desc_title"
				android:layout_width="match_parent"
				android:layout_height="45dp"
				android:background="@color/white">
				
				<!-- 头像 -->
				<ImageView
					android:id="@+id/user_photo"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_marginLeft="9dp"
					android:layout_centerVertical="true"
					android:background="@drawable/portrait_bg"
					android:contentDescription="@string/imgdes"/>
				
				<TextView
					android:id="@+id/user_name"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_marginLeft="11dp"
					android:layout_centerVertical="true"
					android:layout_toRightOf="@id/user_photo"
					android:text="@string/video_live_username_text"
					android:textColor="#000000"
					android:textSize="16sp"/>
				
				<ImageView
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_centerInParent="true"
					android:layout_alignParentRight="true"
					android:layout_marginRight="10dp"
					android:background="@drawable/realtime"
					android:contentDescription="@string/imgdes"/>
			</RelativeLayout>
			
			<!-- 视频播放 -->
			<RelativeLayout
				android:id="@+id/video_play_layout"
				android:layout_width="match_parent"
				android:layout_height="206dp"
				android:background="#000000">
				
				<com.rd.car.player.RtmpPlayerView
					android:id="@+id/vRtmpPlayVideo"
					android:layout_width="match_parent"
					android:layout_height="206dp"
					android:visibility="visible"/>
				
				<RelativeLayout
					android:id="@+id/video_loading"
					android:layout_width="match_parent"
					android:layout_height="match_parent">
					<ProgressBar
						style="?android:attr/progressBarStyleLarge"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:layout_centerInParent="true" />
				</RelativeLayout>
				
				<!-- 默认显示图片
				<ImageView
					android:id="@+id/video_default_image"
					android:layout_width="match_parent"
					android:layout_height="206dp"
					android:background="@drawable/screenshot4"
					android:contentDescription="@string/imgdes"
					android:visibility="gone"/>
				 -->
				<!-- 控制视频播放暂停 -->
				<RelativeLayout
					android:id="@+id/play_layout"
					android:layout_width="match_parent"
					android:layout_height="206dp"
					android:clickable="true"
					android:visibility="gone">
					<!-- 视频播放按钮 -->
					<ImageView
						android:id="@+id/play_image"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:layout_centerInParent="true"
						android:background="@drawable/video_play_btn"
						android:contentDescription="@string/imgdes"/>
					
					<TextView
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:layout_marginTop="5dp"
						android:layout_below="@id/play_image"
						android:layout_centerHorizontal="true"
						android:textColor="#F5F5F5"
						android:textSize="16sp"
						android:text="@string/watch_live_text"/>
				</RelativeLayout>
			</RelativeLayout>
			
			<!-- 地图 -->
			<RelativeLayout
				android:id="@+id/map_layout"
				android:layout_width="match_parent"
				android:layout_height="160dp"
				android:layout_marginTop="0dp"
				android:background="#ededed">
				<!--layout_marginTop =" -6dp" -->
				
				<!-- 百度地图 -->
				<com.baidu.mapapi.map.MapView
					android:id="@+id/bmapView"
					android:layout_width="match_parent"
					android:layout_height="157dp"
					android:layout_centerInParent="true"
					android:clickable="true" />
				
				<!-- 为了解决地图拖动事件冲突 -->
				<RelativeLayout
					android:id="@+id/map_blankview"
					android:layout_width="match_parent"
					android:layout_height="match_parent" />
				
			</RelativeLayout>
			
			<!-- 分割线 -->
			<View
				android:id="@+id/split_line"
				android:layout_width="match_parent"
				android:layout_height="1dp"
				android:background="#b4b4b4"/>
			
			<!-- 视频描述 -->
			<RelativeLayout
				android:id="@+id/video_desc"
				android:layout_width="match_parent"
				android:layout_height="26dp"
				android:background="#ededed">
				
				<TextView
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:layout_marginLeft="6dp"
					android:layout_centerVertical="true"
					android:textColor="#000000"
					android:textSize="12sp"
					android:text="@string/video_live_desc_text"/>
			</RelativeLayout>
			
			<!-- 评论 -->
			<RelativeLayout
				android:id="@+id/video_comment_tab_layout"
				android:layout_width="match_parent"
				android:layout_height="50dp"
				android:background="@color/white">
				
				<!-- 评论按钮 -->
				<TextView
					android:id="@+id/comment_btn"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_marginLeft="8dp"
					android:layout_centerVertical="true"
					android:drawableLeft="@drawable/icon_comment"
					android:drawablePadding="5dp"
					android:textColor="@color/font_comment"
					android:textSize="14sp"
					android:text="264" />
				
				<!-- 转发按钮 -->
				<ImageButton
					android:id="@+id/send_btn"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_marginRight="5dp"
					android:layout_alignParentRight="true"
					android:layout_centerVertical="true"
					android:background="@drawable/video_share_btn"
					android:contentDescription="@string/imgdes" />
				
				<!-- 点赞按钮 -->
				<Button
					android:id="@+id/like_btn"
					android:layout_width="69dp"
					android:layout_height="23dp"
					android:layout_marginRight="16dp"
					android:layout_toLeftOf="@id/send_btn"
					android:layout_centerVertical="true"
					android:background="@drawable/btn_like_btn"
					android:paddingLeft="15dp"
					android:text="502"
					android:textSize="14sp"
					android:textColor="#C9C9C9" />
			</RelativeLayout>
			
			<!-- 评论列表 -->
			<cn.com.mobnote.view.MyListView
				android:id="@+id/video_comment_listview"
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				android:paddingBottom="58dp"
				android:focusable="false"
				android:scrollbars="none" >
			</cn.com.mobnote.view.MyListView>
		</LinearLayout>
	</ScrollView>
	
	<!-- 评论 -->
	<RelativeLayout
		android:id="@+id/video_comment_layout"
		android:layout_width="match_parent"
		android:layout_height="58dp"
		android:layout_alignParentBottom="true"
		android:background="#131313">
		
		<ImageButton
			android:id="@+id/comment_feel"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginLeft="10dp"
			android:layout_centerVertical="true"
			android:background="@drawable/countenance"
			android:contentDescription="@string/imgdes"/>
		
		<Button
			android:id="@+id/comment_send_btn"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_alignParentRight="true"
			android:layout_centerVertical="true"
			android:background="#131313"
			android:textSize="18sp"
			android:textColor="@color/white"
			android:text="@string/video_play_comment_send"/>
		
		<EditText
			android:id="@+id/share_desc"
			android:layout_width="match_parent"
			android:layout_height="35dp"
			android:layout_marginLeft="10dp"
			android:layout_toRightOf="@id/comment_feel"
			android:layout_toLeftOf="@id/comment_send_btn"
			android:background="@drawable/text_bg"
			android:layout_centerVertical="true"
			android:textColor="#5D5D5D"
			android:textSize="16sp"
			android:hint="@string/video_play_comment_text"
			android:inputType="text" />
		
	</RelativeLayout>
	
</LinearLayout>














<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#ffffff"
    android:paddingBottom="14dp"
    android:paddingTop="14dp" >

    <ImageView
        android:id="@+id/iv_userlist_avatar"
        android:layout_width="47dp"
        android:layout_height="47dp"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="9dp"
        android:contentDescription="@string/imgdes"
        android:scaleType="centerCrop" />

    <TextView
        android:id="@+id/tv_userlist_nickname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/iv_userlist_avatar"
        android:layout_marginBottom="0dp"
        android:layout_marginLeft="9dp"
        android:layout_marginRight="101dp"
        android:layout_toRightOf="@id/iv_userlist_avatar"
        android:gravity="left|center_vertical"
        android:singleLine="true"
        android:textColor="#333333"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/tv_userlist_share_followed_fans"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_userlist_nickname"
        android:layout_marginLeft="9dp"
        android:layout_marginRight="101dp"
        android:layout_marginTop="11dp"
        android:layout_toRightOf="@id/iv_userlist_avatar"
        android:gravity="left|center_vertical"
        android:singleLine="true"
        android:textSize="11sp" />

    <LinearLayout
        android:id="@+id/ll_userlist_link"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_width="83dp"
        android:layout_height="27dp"
        android:gravity="center"
        android:layout_marginRight="9dp"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/iv_userlist_link"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_marginRight="3dp"
            android:contentDescription="@string/imgdes"/>

        <TextView
            android:id="@+id/tv_userlist_link"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="#ffffff"
            android:textSize="12sp" />
    </LinearLayout>

</RelativeLayout>
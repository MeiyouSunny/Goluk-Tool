<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ededed" >

    <!-- title -->

    <RelativeLayout
        android:id="@+id/title_layout"
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:background="@color/bg" >

        <ImageButton
            android:id="@+id/back_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:background="@drawable/cross_screen_arrow_icon1" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/setup_text"
            android:textColor="@color/white"
            android:textSize="18sp" />
    </RelativeLayout>
    <!-- body -->

    <View
        android:id="@+id/solid_1"
        android:layout_width="wrap_content"
        android:layout_height="1dp"
        android:layout_below="@id/title_layout"
        android:layout_marginTop="32dp"
        android:background="@drawable/solid" />

    <RelativeLayout
        android:id="@+id/remove_cache_item"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@id/solid_1"
        android:background="#f4f4f4" >

        <TextView
            android:id="@+id/remove_cache_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="14dp"
            android:text="@string/remove_cache_text"
            android:textColor="#3f3f3f"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/user_personal_setup_cache_size"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="14dp"
            android:contentDescription="@string/imgdes"
            android:textColor="#3f3f3f"
            android:textSize="18sp" />
    </RelativeLayout>

    <View
        android:id="@+id/solid_2"
        android:layout_width="wrap_content"
        android:layout_height="1dp"
        android:layout_below="@id/remove_cache_item"
        android:background="@drawable/solid" />
    <!-- 同步开关 -->
    <View
        android:id="@+id/solid_3"
        android:layout_width="wrap_content"
        android:layout_height="1dp"
        android:layout_below="@id/solid_2"
        android:layout_marginTop="10dp"
        android:background="@drawable/solid" />

    <RelativeLayout
        android:id="@+id/set_ipc_item"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@id/solid_3"
        android:background="#f4f4f4" >

        <TextView
            android:id="@+id/set_ipc_item_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="14dp"
            android:text="@string/set_ipc_item_text"
            android:textColor="#3f3f3f"
            android:textSize="16sp" />
        
        <Button 
            android:id="@+id/set_ipc_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="14dp"
            android:background="@drawable/set_open_btn"/>

    </RelativeLayout>

    <View
        android:id="@+id/solid_4"
        android:layout_width="wrap_content"
        android:layout_height="1dp"
        android:layout_below="@id/set_ipc_item"
        android:background="@drawable/solid" />
    
    <TextView
        android:id="@+id/set_ipc_item_hint" 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="14dp"
        android:layout_marginRight="14dp"
        android:layout_below="@id/solid_4"
        android:textColor="@color/unbind_camera_wifi_hint_text_color"
        android:textSize="13sp"
        android:layout_marginTop="8dp" 
        android:layout_marginBottom="16dp"
        android:text="@string/set_ipc_item_hint_text"/>
    
    <View
            android:id="@+id/solid_5"
            android:layout_width="wrap_content"
            android:layout_height="1dp"
            android:layout_below="@id/set_ipc_item_hint"
            android:layout_marginTop="10dp"
            android:background="@drawable/solid" />
        <!-- 注销/登录 -->

        <LinearLayout
            android:id="@+id/loginout_item"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_below="@id/solid_5"
            android:background="#f4f4f4"  >

            <Button
                android:id="@+id/loginout_btn"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@null"
                android:textColor="#1163a2"
                android:text="注销" />
        </LinearLayout>

        <View
            android:id="@+id/solid_6"
            android:layout_width="wrap_content"
            android:layout_height="1dp"
            android:layout_below="@id/loginout_item"
            android:background="@drawable/solid" />


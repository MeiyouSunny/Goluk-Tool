<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ededed">
    
    <!-- title -->
	<RelativeLayout
		android:id="@+id/title_layout"
		android:layout_width="match_parent"
		android:layout_height="42dp"
		android:background="@color/bg">
		
		<Button
			android:id="@+id/back_btn"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginLeft="10dp"
			android:gravity="center|left"
			android:drawableLeft="@drawable/icon_back_btn"
			android:drawablePadding="8dp"
			android:background="@color/bg"
			android:textColor="@color/white"
			android:textSize="16sp"
			/>
		
		<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_centerInParent="true"
			android:textSize="18sp"
			android:textColor="@color/white"
			android:text="@string/setup_text"/>
		
	</RelativeLayout>
	<!-- body -->
	<View
		android:id="@+id/solid_1"
		android:layout_width="wrap_content"
		android:layout_height="1dp"
		android:layout_marginTop="15dp"
		android:layout_below="@id/title_layout"
		android:background="@drawable/solid"/>
	
	<RelativeLayout
		android:id="@+id/remove_cache_item"
		android:layout_width="match_parent"
		android:layout_height="47dp"
		android:layout_below="@id/solid_1"
		android:background="#f4f4f4">
		
		<TextView
			android:id="@+id/remove_cache_text"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginLeft="21dp"
			android:text="@string/remove_cache_text"
			android:textSize="16sp"
			android:textColor="#3f3f3f"
			android:layout_centerVertical="true"/>
		
		<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_alignParentRight="true"
			android:layout_marginRight="19dp"
			android:text="@string/cache_size_text"
			android:layout_centerVertical="true"
			android:textSize="18sp"
			android:contentDescription="@string/imgdes"/>
		
	</RelativeLayout>
	<View
		android:id="@+id/solid_2"
		android:layout_width="wrap_content"
		android:layout_height="1dp"
		android:layout_below="@id/remove_cache_item"
		android:background="@drawable/solid"/>
	
	<!-- Goluk固件升级 -->
	<RelativeLayout
		android:id="@+id/update_item"
		android:layout_width="match_parent"
		android:layout_height="47dp"
		android:layout_below="@id/solid_2"
		android:background="#f4f4f4">
		
		<TextView
			android:id="@+id/shopping_text"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginLeft="21dp"
			android:text="@string/user_personal_setup_update"
			android:textSize="16sp"
			android:textColor="#3f3f3f"
			android:layout_centerVertical="true"/>
		
	</RelativeLayout>

	<!-- 登录/退出登录按钮 -->
	<Button
		android:id="@+id/loginout_btn"
		android:layout_width="312dp"
		android:layout_height="54dp"
		android:layout_alignParentBottom="true"
		android:layout_centerHorizontal="true"
		android:background="@drawable/btn_log_btn"
		android:gravity="center"
		android:textSize="18sp"
		android:textColor="#f0fefc"/>
</RelativeLayout>
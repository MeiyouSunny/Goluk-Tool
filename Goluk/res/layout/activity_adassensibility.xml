<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#f7f9fa" >
    <RelativeLayout
        android:id="@+id/title_layout"
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:background="@color/photoalbum_title_bg_color" >
  
        <ImageButton
            android:id="@+id/back_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="15dp"
            android:background="@drawable/live_btn_back" />

        <TextView
            android:id="@+id/title"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:textColor="@color/white"
            android:textSize="18sp" />
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/layout_high"
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:layout_marginTop="15dp"
        android:background="@color/setting_white_color"
        >

        <TextView
            android:id="@+id/textview_high"
            android:paddingLeft="15dp"
        	android:paddingRight="15dp" 
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:textColor="@color/setting_black_color"
            android:textSize="16sp"
            android:text="@string/str_adas_high_sensibility"/>

        <ImageButton
            android:visibility="gone"
            android:id="@+id/btn_high_right"
            android:layout_width="20dp"
            android:layout_height="14dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="15dp"
            android:background="@drawable/setup_icon_hook"
            android:contentDescription="@string/def" />
        
        <View 
        	android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/setting_line_color"/>
                
       	<View 
   	      android:layout_width="match_parent"
          android:layout_height="1px"
          android:layout_marginLeft="15dp"
          android:layout_alignParentBottom="true"
          android:background="@color/setting_line_color"/>
        
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/layout_middle"
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:background="@color/setting_white_color"
        >

        <TextView
            android:id="@+id/textview_middle"
            android:paddingLeft="15dp"
        	android:paddingRight="15dp" 
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:textColor="@color/setting_black_color"
            android:textSize="16sp" 
            android:text="@string/str_adas_middle_sensibility"/>

        <ImageButton
            android:visibility="gone"
            android:id="@+id/btn_middle_right"
            android:layout_width="20dp"
            android:layout_height="14dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="15dp"
            android:background="@drawable/setup_icon_hook"
            android:contentDescription="@string/def" />
        
        <View 
   	      android:layout_width="match_parent"
          android:layout_height="1px"
          android:layout_marginLeft="15dp"
          android:layout_alignParentBottom="true"
          android:background="@color/setting_line_color"/>
        
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/layout_low"
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:background="@color/setting_white_color"
        >

        <TextView
            android:id="@+id/textview_low"
            android:paddingLeft="15dp"
        	android:paddingRight="15dp" 
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:textColor="@color/setting_black_color"
            android:textSize="16sp"
            android:text="@string/str_adas_low_sensibility"/>

        <ImageButton
            android:visibility="gone"
            android:id="@+id/btn_low_right"
            android:layout_width="20dp"
            android:layout_height="14dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="15dp"
            android:background="@drawable/setup_icon_hook"
            android:contentDescription="@string/def" />
        
        <View 
   	      android:layout_width="match_parent"
          android:layout_height="1px"
          android:layout_marginLeft="15dp"
          android:layout_alignParentBottom="true"
          android:background="@color/setting_line_color"/>
        
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/layout_close"
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:background="@color/setting_white_color"
        >

        <TextView
            android:id="@+id/textview_close"
            android:paddingLeft="15dp"
        	android:paddingRight="15dp" 
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:textColor="@color/setting_black_color"
            android:textSize="16sp"
            android:text="@string/carrecorder_tcaf_close"/>

        <ImageButton
            android:visibility="gone"
            android:id="@+id/btn_close_right"
            android:layout_width="20dp"
            android:layout_height="14dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="15dp"
            android:background="@drawable/setup_icon_hook"
            android:contentDescription="@string/def" />
        
        <View 
   	      android:layout_width="match_parent"
          android:layout_height="1px"
          android:layout_alignParentBottom="true"
          android:background="@color/setting_line_color"/>
        
    </RelativeLayout>

</LinearLayout>


    <!-- 编辑资料的头部标题 -->
	<include layout="@layout/user_personal_edit_title"/>
	
	<!-- 编辑资料的主题部分 -->
	
	<!-- 头像 -->
	<LinearLayout 
	    android:layout_width="match_parent"
	    android:layout_height="68dp"
	    android:layout_marginTop="30dp"
	    android:background="@color/white"
	    android:orientation="vertical"
	    >

	    <View
	        android:id="@+id/user_personal_solid_1"
	        android:layout_width="wrap_content"
	        android:layout_height="1dp"
	        android:background="@drawable/solid" />

	    <RelativeLayout 
	    	android:layout_width="match_parent"
	    	android:layout_height="68dp"
	    	android:id="@+id/user_personal_edit_layout1"
	  	 	 >
	    <TextView 
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:id="@+id/user_personal_edit_head_text"
	        android:text="@string/user_personal_edit_head"
	        android:layout_marginLeft="20dp"
	        android:layout_centerVertical="true"
	        android:textColor="@color/user_personal_gray"
	        />
	   	<LinearLayout 
	   	    android:layout_width="wrap_content"
	   	    android:layout_height="wrap_content"
	   	    android:orientation="horizontal"
	   	    android:layout_alignParentRight="true"
	   	    android:layout_centerVertical="true"
	   	    android:layout_marginRight="10dp"
	   	    >
	   	    <ImageView 
	   	        android:layout_width="wrap_content"
	   	        android:layout_height="wrap_content"
	   	        android:id="@+id/user_person_edit_head_image"
	   	        android:src="@drawable/individual_center_head_boy_one"
	   	        android:background="@drawable/individual_center_headbg_frame"
	   	        android:layout_marginRight="10dp"
	   	        />
	   	    <ImageView 
	   	        android:layout_width="wrap_content"
	   	        android:layout_height="wrap_content"
	   	        android:id="@+id/user_personal_head_arrow"
	   	        android:src="@drawable/individual_center_next_icon"
	   	        android:layout_gravity="center_vertical"
	   	        />
	   	</LinearLayout>
	</RelativeLayout>
	<View
	        android:id="@+id/user_personal_solid_2"
	        android:layout_width="wrap_content"
	        android:layout_height="1dp"
	        android:background="@drawable/solid" />
	</LinearLayout>
	
	<!-- 昵称 -->
	<LinearLayout 
	    android:layout_width="match_parent"
	     android:layout_height="60dp"
	    android:layout_marginTop="36dp"
	    android:background="@color/white"
	    android:orientation="vertical"
	    >
	<View
	        android:id="@+id/user_personal_solid_3"
	        android:layout_width="wrap_content"
	        android:layout_height="1dp"
	        android:background="@drawable/solid" />
	    <RelativeLayout 
	    	android:layout_width="match_parent"
	   		 android:layout_height="60dp"
	   		 android:id="@+id/user_personal_edit_layout2"
	    	>
	    <TextView 
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:id="@+id/user_personal_edit_name_text"
	        android:text="@string/user_personal_edit_name"
	        android:layout_marginLeft="20dp"
	        android:layout_centerVertical="true"
	        android:textColor="@color/user_personal_gray"
	        />
	   	<LinearLayout 
	   	    android:layout_width="wrap_content"
	   	    android:layout_height="wrap_content"
	   	    android:orientation="horizontal"
	   	    android:layout_alignParentRight="true"
	   	    android:layout_centerVertical="true"
	   	    >
	   	   <TextView 
	   	       android:layout_width="wrap_content"
	   	       android:layout_height="wrap_content"
	   	       android:id="@+id/user_personal_name_text"
	   	       android:layout_marginRight="10dp"
	   	       android:textColor="@color/user_personal_black"
	   	       />
	   	    <ImageView 
	   	        android:layout_width="wrap_content"
	   	        android:layout_height="wrap_content"
	   	        android:id="@+id/user_personal_name_arrow"
	   	        android:src="@drawable/individual_center_next_icon"
	   	        android:layout_marginRight="10dp"
	   	        />
	   	</LinearLayout>
	</RelativeLayout>
	</LinearLayout>
	

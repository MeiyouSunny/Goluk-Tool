<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ededed" >
    
    <!-- title -->
	<RelativeLayout
		android:id="@+id/title_layout"
		android:layout_width="match_parent"
		android:layout_height="42dp"
		android:background="@color/bg">
		
		<ImageButton
            	android:id="@+id/back_btn"
            	android:layout_width="wrap_content"
            	android:layout_height="wrap_content"
           	 	android:layout_centerVertical="true"
           		android:background="@drawable/live_btn_back" />
		
		<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_centerInParent="true"
			android:textSize="18sp"
			android:textColor="@color/white"
			android:text="@string/ipc_update_text"/>
		
	</RelativeLayout>
	<!-- body -->
	<View
		android:id="@+id/solid_1"
		android:layout_width="wrap_content"
		android:layout_height="1dp"
		android:layout_marginTop="15dp"
		android:layout_below="@id/title_layout"
		android:background="@drawable/solid"/>
	
	<RelativeLayout
		android:id="@+id/remove_cache_item"
		android:layout_width="match_parent"
		android:layout_height="50dp"
		android:layout_below="@id/solid_1"
		android:background="#f4f4f4">
		
		
		<LinearLayout 
		    android:id="@+id/upgrade_layout_name"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:layout_marginLeft="21dp"
		    android:layout_centerVertical="true"
		    android:orientation="vertical"
		    android:gravity="center"
		    >
		    <TextView
		        android:id="@+id/upgrade_ipc_text"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:text="@string/ipc_update_layout_text"
		        android:textColor="#3f3f3f"
		        android:textSize="16sp" />
		    <TextView
		        android:id="@+id/upgrade_ipc_name"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:text="V1.1.1"
		        android:textColor="#3f3f3f"
		        android:textSize="16sp" />
		</LinearLayout>
		
		<LinearLayout 
		    android:id="@+id/upgrade_ipc_size"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:layout_alignParentRight="true"
			android:layout_marginRight="19dp"
			android:layout_centerVertical="true"
		    android:orientation="vertical"
		    >
		    <TextView
		        android:id="@+id/upgrade_ipc_size_text"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:text="356MB"
		        android:textColor="#3f3f3f"
		        android:textSize="16sp" />
		    <TextView
		        android:id="@+id/upgrade_ipc_size_download"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:text="已下载"
		        android:textColor="#3b97f5"
		        android:textSize="16sp" />
		</LinearLayout>
		
	</RelativeLayout>
	<View
		android:id="@+id/solid_2"
		android:layout_width="wrap_content"
		android:layout_height="1dp"
		android:layout_below="@id/remove_cache_item"
		android:background="@drawable/solid"/>
	
	<View
		android:id="@+id/solid_3"
		android:layout_width="wrap_content"
		android:layout_height="1dp"
		android:layout_below="@id/solid_2"
		android:background="@drawable/solid"
		android:layout_marginTop="5dp"/>
	
	<RelativeLayout
		android:id="@+id/unbind_item"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_below="@id/solid_3"
		android:background="#f4f4f4"
		>
		
		<TextView
			android:id="@+id/unbind_item_text"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginLeft="21dp"
			android:text="@string/unbind_text"
			android:textSize="16sp"
			android:textColor="#3f3f3f"
			android:layout_centerVertical="true"/>
		
	</RelativeLayout>
	<View
		android:id="@+id/solid_4"
		android:layout_width="wrap_content"
		android:layout_height="1dp"
		android:layout_below="@id/unbind_item"
		android:background="@drawable/solid"/>
</RelativeLayout>

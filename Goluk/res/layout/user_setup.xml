<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:id="@+id/login_layout"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:background="#ededed">
	
	<!-- 个人设置 -->
	<RelativeLayout
		android:id="@+id/title_layout"
		android:layout_width="match_parent"
		android:layout_height="42dp"
		android:background="@color/bg">
		
		<Button
			android:id="@+id/back_btn"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginLeft="10dp"
			android:gravity="center|left"
			android:drawableLeft="@drawable/icon_back_btn"
			android:drawablePadding="8dp"
			android:background="@color/bg"
			android:textColor="@color/white"
			android:textSize="16sp"
			android:text="@string/back_text"/>
		
		<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_centerInParent="true"
			android:textSize="18sp"
			android:textColor="@color/white"
			android:text="@string/setup_text"/>
		
	</RelativeLayout>
	
	<View
		android:id="@+id/solid_1"
		android:layout_width="wrap_content"
		android:layout_height="1dp"
		android:layout_marginTop="15dp"
		android:layout_below="@id/title_layout"
		android:background="@drawable/solid"/>
	
	<RelativeLayout
		android:id="@+id/local_video_item"
		android:layout_width="match_parent"
		android:layout_height="47dp"
		android:layout_below="@id/solid_1"
		android:background="#f4f4f4">
		
		<TextView
			android:id="@+id/local_video_text"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginLeft="21dp"
			android:text="@string/draft_box_text"
			android:textSize="16sp"
			android:textColor="#3f3f3f"
			android:layout_centerVertical="true"/>
		
		<!-- 
		<ImageView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_alignParentRight="true"
			android:layout_marginRight="19dp"
			android:background="@drawable/icon_next_press"
			android:layout_centerVertical="true"
			android:contentDescription="@string/imgdes"/>
		 -->
	</RelativeLayout>
	
	<View
		android:id="@+id/solid_2"
		android:layout_width="wrap_content"
		android:layout_height="1dp"
		android:layout_below="@id/local_video_item"
		android:background="@drawable/solid"/>
	
	<View
		android:id="@+id/solid_3"
		android:layout_width="wrap_content"
		android:layout_height="1dp"
		android:layout_marginTop="15dp"
		android:layout_below="@id/solid_2"
		android:background="@drawable/solid"/>
	
	<RelativeLayout
		android:id="@+id/synchronous_item"
		android:layout_width="match_parent"
		android:layout_height="47dp"
		android:layout_below="@id/solid_3"
		android:background="#f4f4f4">
		
		<TextView
			android:id="@+id/synchronous_text"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginLeft="21dp"
			android:text="@string/synchronous_text"
			android:textSize="16sp"
			android:textColor="#3f3f3f"
			android:layout_centerVertical="true"/>
		
		<ImageButton
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_alignParentRight="true"
			android:layout_marginRight="15dp"
			android:background="@drawable/icon_close"
			android:layout_centerVertical="true"
			android:contentDescription="@string/imgdes"/>
	</RelativeLayout>
	
	<RelativeLayout
		android:id="@+id/synchronous_text_item"
		android:layout_width="match_parent"
		android:layout_height="52dp"
		android:layout_below="@id/synchronous_item">
		
		<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginTop="12dp"
			android:layout_marginLeft="12dp"
			android:text="@string/synchronous_desc_text"
			android:textSize="12sp"
			android:textColor="#9b9b9b"/>
	</RelativeLayout>
	
	<View
		android:id="@+id/solid_4"
		android:layout_width="wrap_content"
		android:layout_height="1dp"
		android:layout_below="@id/synchronous_text_item"
		android:background="@drawable/solid"/>
	
	<RelativeLayout
		android:id="@+id/update_item"
		android:layout_width="match_parent"
		android:layout_height="47dp"
		android:layout_below="@id/solid_4"
		android:background="#f4f4f4">
		
		<TextView
			android:id="@+id/shopping_text"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginLeft="21dp"
			android:text="@string/update_text"
			android:textSize="16sp"
			android:textColor="#3f3f3f"
			android:layout_centerVertical="true"/>
		
		<!-- 
		<ImageView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_alignParentRight="true"
			android:layout_marginRight="19dp"
			android:background="@drawable/icon_next_press"
			android:layout_centerVertical="true"
			android:contentDescription="@string/imgdes"/>
		 -->
	</RelativeLayout>
	
	<View
		android:id="@+id/solid_5"
		android:layout_width="wrap_content"
		android:layout_height="1dp"
		android:layout_below="@id/update_item"
		android:background="@drawable/solid"/>
	
	<RelativeLayout
		android:id="@+id/remove_cache_item"
		android:layout_width="match_parent"
		android:layout_height="47dp"
		android:layout_below="@id/solid_5"
		android:background="#f4f4f4">
		
		<TextView
			android:id="@+id/remove_cache_text"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginLeft="21dp"
			android:text="@string/remove_cache_text"
			android:textSize="16sp"
			android:textColor="#3f3f3f"
			android:layout_centerVertical="true"/>
		
		<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_alignParentRight="true"
			android:layout_marginRight="19dp"
			android:text="@string/cache_size_text"
			android:layout_centerVertical="true"
			android:textSize="18sp"
			android:contentDescription="@string/imgdes"/>
		
		<!-- 
		<ImageView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_alignParentRight="true"
			android:layout_marginRight="19dp"
			android:background="@drawable/icon_next_press"
			android:layout_centerVertical="true"
			android:contentDescription="@string/imgdes"/>
		 -->
	</RelativeLayout>
	
	<View
		android:id="@+id/solid_6"
		android:layout_width="wrap_content"
		android:layout_height="1dp"
		android:layout_below="@id/remove_cache_item"
		android:background="@drawable/solid"/>
	
	<Button
		android:id="@+id/loginout_btn"
		android:layout_width="match_parent"
		android:layout_height="54dp"
		android:layout_marginTop="107dp"
		android:layout_below="@id/solid_6"
		android:layout_marginLeft="20dp"
		android:layout_marginRight="20dp"
		android:background="@drawable/btn_log_btn"
		android:gravity="center"
		android:textSize="18sp"
		android:textColor="#f0fefc"/>
</RelativeLayout>











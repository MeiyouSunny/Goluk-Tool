<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white" >
    
	<!-- 视频截图图片 -->
	<RelativeLayout 
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    >
	    <ImageView
		android:id="@+id/video_img"
		android:layout_width="match_parent"
		android:layout_height="202dp"
		android:background="@drawable/video_morenpic"
		android:contentDescription="@string/imgdes" />
	
	<ImageButton
		android:id="@+id/play_img"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:background="@drawable/videoplay_btn"
		android:layout_centerInParent="true"
		android:layout_marginLeft="70dp"
		android:visibility="visible"
		android:contentDescription="@string/imgdes"/>
	</RelativeLayout>
	
	<TextView 
	    android:layout_width="match_parent"
	    android:layout_height="28dp"
	    android:id="@+id/user_personal_homepage_item_text"
	    android:textSize="12sp"
	    android:text="幸好我有Goluk"
	    android:gravity="center_vertical"
	    android:paddingLeft="14dp"
	    android:textColor="@color/user_personal_homepage_text"
	    />
	<View
	        android:id="@+id/user_personal_solid_1"
	        android:layout_width="wrap_content"
	        android:layout_height="1dp"
	        android:background="@drawable/solid" />
	<RelativeLayout 
	    android:layout_width="match_parent"
	    android:layout_height="36dp"
	    android:gravity="center_vertical"
	    >
	    <ImageView 
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:id="@+id/user_personal_homepage_item_watch_image"
	        android:src="@drawable/livestreaming_watch_eople_number_icon"
	        android:layout_marginLeft="14dp"
	        android:layout_centerVertical="true"
	        />
	    <TextView 
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:id="@+id/user_personal_homepage_item_count_watch"
	        android:layout_toRightOf="@id/user_personal_homepage_item_watch_image"
	        android:text="100"
	        android:layout_marginLeft="8dp"
	        android:layout_centerVertical="true"
	        android:textColor="@color/user_personal_homepage_text"
	        android:textSize="14sp"
	        />
	    <RelativeLayout 
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_alignParentRight="true"
	        android:layout_marginRight="14dp"
	        android:background="@drawable/livestreaming_share_btn"
	        android:id="@+id/user_personal_homepage_item_share"
	        >
	        <TextView 
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:text="@string/user_personal_home_share"
	            android:layout_centerVertical="true"
	            android:layout_marginLeft="30dp"
	             android:textColor="@color/user_personal_homepage_text"
	             android:textSize="14sp"
	            />
	    </RelativeLayout>

	    <RelativeLayout
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_alignParentRight="true"
	        android:background="@drawable/livestreaming_like__btn" 
	        android:layout_marginRight="80dp"
	        android:id="@+id/user_personal_homepage_item_zan">

	        <TextView
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:id="@+id/user_personal_homepage_item_count_zan"
	            android:layout_centerVertical="true"
	            android:layout_marginLeft="30dp"
	            android:text="502"
	             android:textColor="@color/user_personal_homepage_text"
	             android:textSize="14sp" />
	    </RelativeLayout>

	</RelativeLayout>
	
</LinearLayout>

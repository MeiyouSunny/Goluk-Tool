<?xml version="1.0" encoding="utf-8"?>
<!-- 我的视频item -->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:background="#ffffff">
	
	<RelativeLayout
		android:id="@+id/mVideoLayout1"
		android:layout_width="176dp"
		android:layout_height="86dp">

		<ImageView
			android:id="@+id/video_first_needle1"
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:background="@drawable/carrecorder_xcjlybj"
			android:contentDescription="@string/def"
			android:paddingLeft="8dp" />

		<TextView
			android:id="@+id/video_countTime1"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginLeft="4dp"
			android:layout_marginTop="4dp"
			android:background="@drawable/carrecorder_flle_time_bg"
			android:paddingLeft="6dp"
			android:paddingRight="6dp"
			android:text="05:00"
			android:textColor="#dedede"
			android:textSize="10sp" />

		<ImageView
			android:id="@+id/video_quality1"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_alignParentRight="true"
			android:layout_marginRight="4dp"
			android:layout_marginTop="4dp"
			android:background="@drawable/carrecorder_icon_1080"
			android:paddingRight="6dp" />

		<ImageView
			android:layout_width="match_parent"
			android:layout_height="16dp"
			android:layout_alignParentBottom="true"
			android:background="#7f000000" />

		<TextView
			android:id="@+id/video_createtime1"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_alignParentBottom="true"
			android:textSize="11sp"
			android:textColor="#dedede"
			android:paddingLeft="4dp"
			android:text="星期五    17:20" />
		
		<TextView
			android:id="@+id/video_size1"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_alignParentBottom="true"
			android:layout_alignParentRight="true"
			android:textSize="11sp"
			android:textColor="#dedede"
			android:paddingRight="4dp"
			android:text="1.5MB" />

		<RelativeLayout
			android:id="@+id/mTMLayout1"
			android:visibility="gone"
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:background="#80000000">
			
			<ImageView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_marginRight="4dp"
				android:layout_marginBottom="22dp"
				android:layout_alignParentRight="true"
				android:layout_alignParentBottom="true"
				android:background="@drawable/flle_edit_hook"/>
		</RelativeLayout>
	</RelativeLayout>

	<RelativeLayout
		android:id="@+id/mVideoLayout2"
		android:layout_toRightOf="@+id/mVideoLayout1"
		android:layout_width="176dp"
		android:layout_height="86dp" >

		<ImageView
			android:id="@+id/video_first_needle2"
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:background="@drawable/carrecorder_xcjlybj"
			android:contentDescription="@string/def"
			android:paddingLeft="8dp" />

		<TextView
			android:id="@+id/video_countTime2"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginLeft="4dp"
			android:layout_marginTop="4dp"
			android:background="@drawable/carrecorder_flle_time_bg"
			android:paddingLeft="6dp"
			android:paddingRight="6dp"
			android:text="05:00"
			android:textColor="#dedede"
			android:textSize="10sp" />

		<ImageView
			android:id="@+id/video_quality2"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_alignParentRight="true"
			android:layout_marginRight="4dp"
			android:layout_marginTop="4dp"
			android:background="@drawable/carrecorder_icon_1080"
			android:paddingRight="6dp" />

		<ImageView
			android:layout_width="match_parent"
			android:layout_height="16dp"
			android:layout_alignParentBottom="true"
			android:background="#7f000000" />

		<TextView
			android:id="@+id/video_createtime2"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_alignParentBottom="true"
			android:textSize="11sp"
			android:textColor="#dedede"
			android:paddingLeft="4dp"
			android:text="星期五    17:20" />
		
		<TextView
			android:id="@+id/video_size2"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_alignParentBottom="true"
			android:layout_alignParentRight="true"
			android:textSize="11sp"
			android:textColor="#dedede"
			android:paddingRight="4dp"
			android:text="1.5MB" />

		<RelativeLayout
			android:id="@+id/mTMLayout2"
			android:visibility="gone"
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:background="#80000000">
			
			<ImageView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_marginRight="4dp"
				android:layout_marginBottom="22dp"
				android:layout_alignParentRight="true"
				android:layout_alignParentBottom="true"
				android:background="@drawable/flle_edit_hook"/>
		</RelativeLayout>
	</RelativeLayout>
</RelativeLayout>









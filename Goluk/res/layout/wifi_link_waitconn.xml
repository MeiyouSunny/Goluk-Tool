<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_ipcbind_bg"  >

    <TextView
        android:id="@+id/wifi_link_waitconn_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="22dp"
        android:text="@string/wifi_link_32_text"
        android:textColor="#565656"
        android:textSize="14sp" />

    <ImageView
        android:id="@+id/wifi_link_waitconn_img"
        android:layout_width="245dp"
        android:layout_height="190dp"
        android:layout_below="@id/wifi_link_waitconn_txt"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="104dp"
        android:contentDescription="@string/imgdes" />

    <TextView
        android:id="@+id/wifi_link_waitconn_help"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="15dp"
        android:drawableLeft="@drawable/connecthelp_icon"
        android:drawablePadding="5dp"
        android:text="@string/wifi_link_33_text"
        android:textColor="#828282"
        android:textSize="12sp" />

</RelativeLayout>
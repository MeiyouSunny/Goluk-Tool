<!-- goluk首页 -->
<RelativeLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent">
	
	<RelativeLayout
		android:id="@+id/status_layout"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_alignParentBottom="true"
		android:background="@drawable/index_tab_bg">
		
		<Button
			android:id="@+id/more_btn"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_alignParentRight="true"
			android:layout_marginRight="30dp"
			android:layout_marginTop="1dp"
			android:drawableTop="@drawable/index_icon_gengduo_btn"
			android:background="#00000000"
			android:textSize="12sp"
			android:textColor="#676767"
			android:text="@string/more_text"/>
		
		<Button
			android:id="@+id/wifi_status_btn"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginLeft="30dp"
			android:layout_marginTop="1dp"
			android:drawableTop="@drawable/index_icon_xingche_btn"
			android:background="#00000000"
			android:textSize="12sp"
			android:textColor="#676767"
			android:text="@string/wifi_link_text"/>
	</RelativeLayout>
	
	<!-- 地图 -->
	<RelativeLayout
		android:id="@+id/map_layout"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:layout_above="@id/status_layout"
		android:background="#ff0000">
		
		<!-- 百度地图 -->
		<com.baidu.mapapi.map.MapView
			android:id="@+id/bmapView"
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:clickable="true" />
		
		<!-- 定位按钮 -->
		<Button
			android:id="@+id/map_location_btn"
			android:layout_width="44dp"
			android:layout_height="34dp"
			android:layout_marginBottom="40dp"
			android:layout_marginRight="14dp"
			android:layout_alignParentRight="true"
			android:layout_alignParentBottom="true"
			android:background="@drawable/location_btn"/>
		
		<!-- 直播列表按钮 -->
		<Button
			android:id="@+id/map_marke_list_btn"
			android:layout_width="44dp"
			android:layout_height="34dp"
			android:layout_above="@id/map_location_btn"
			android:layout_marginBottom="24dp"
			android:layout_marginRight="14dp"
			android:layout_alignParentRight="true"
			android:background="@drawable/icon_layers_btn"/>
		
		
		<!-- 为了解决地图拖动事件冲突 -->
		<RelativeLayout
			android:id="@+id/map_blankview"
			android:layout_width="match_parent"
			android:layout_height="match_parent" />
	</RelativeLayout>
	
	<ImageButton
		android:id="@+id/share_btn"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_centerHorizontal="true"
		android:layout_alignParentBottom="true"
		android:background="@drawable/index_icon_videoplay_btn"
		android:contentDescription="@string/imgdes"/>
	
	<include
		android:id="@+id/share_layout"
		layout="@layout/index_share"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:visibility="gone"/>
</RelativeLayout>







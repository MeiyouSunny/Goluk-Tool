<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff" >

    <RelativeLayout
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="46dp" >

        <LinearLayout
            android:id="@+id/topLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#313131"
            android:gravity="center" >

            <LinearLayout
                android:id="@+id/mVideoList"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginRight="40dp"
                android:background="#313131"
                android:gravity="center|center_vertical"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/hot_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="精选"
                    android:textColor="#0b59be"
                    android:textSize="16sp" />

                <ImageView
                    android:id="@+id/line_hot"
                    android:layout_width="50dp"
                    android:layout_height="2dp"
                    android:layout_marginTop="5dp"
                    android:background="#0b59be"
                    android:contentDescription="@string/def" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/mTypeList"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="#313131"
                android:gravity="center|center_vertical"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/square_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="最新"
                    android:textColor="#ffffff"
                    android:textSize="16sp" />

                <ImageView
                    android:id="@+id/line_square"
                    android:layout_width="50dp"
                    android:layout_height="2dp"
                    android:layout_marginTop="5dp"
                    android:background="#0b59be"
                    android:contentDescription="@string/def"
                    android:visibility="invisible" />
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>

    <android.support.v4.view.ViewPager
        android:id="@+id/mViewpager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/title" >
    </android.support.v4.view.ViewPager>

</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff" >


    <RelativeLayout
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="46dp" >

        <LinearLayout
            android:id="@+id/topLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#313131"
            android:gravity="center" >

            <LinearLayout
                android:id="@+id/mVideoList"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#313131"
                android:gravity="center|center_vertical"
                android:orientation="vertical" >
                
                <TextView
                    android:id="@+id/hot_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="热门"
                    android:textColor="#ffffff"
                    android:textSize="16sp" />

                <ImageView
                    android:id="@+id/line_hot"
                    android:layout_width="50dp"
                    android:layout_height="2dp"
                    android:layout_marginTop="5dp"
                    android:background="#0b59be"
                    android:contentDescription="@string/def" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/mTypeList"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#313131"
                android:orientation="vertical"
                android:gravity="center|center_vertical" >

                <TextView
                    android:id="@+id/square_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="广场"
                    android:textColor="#ffffff"
                    android:textSize="16sp" />
                
                <ImageView
                    android:id="@+id/line_square"
                    android:layout_width="50dp"
                    android:layout_height="2dp"
                    android:layout_marginTop="5dp"
                    android:background="#0b59be"
                    android:visibility="invisible"
                    android:contentDescription="@string/def" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/lookworld"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#313131"
                android:orientation="vertical"
                android:gravity="center|center_vertical" >

                <TextView
                    android:id="@+id/look_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="看天下"
                    android:textColor="#ffffff"
                    android:textSize="16sp" />
                <ImageView
                    android:id="@+id/line_look"
                    android:layout_width="50dp"
                    android:layout_height="2dp"
                    android:layout_marginTop="5dp"
                    android:background="#0b59be"
                    android:visibility="invisible"
                    android:contentDescription="@string/def" />
            </LinearLayout>
        </LinearLayout>


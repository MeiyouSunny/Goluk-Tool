    <RelativeLayout
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="46dp"
        android:layout_below="@+id/title_layout" >

        <LinearLayout
            android:id="@+id/topLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#344450"
            android:gravity="center" >

            <LinearLayout
                android:id="@+id/mVideoList"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#344450"
                android:gravity="center|center_vertical"
                android:orientation="horizontal" >

                <!--
                     <ImageView
                    android:id="@+id/hot_image"
                    android:layout_width="wrap_content"
               	 	android:layout_height="wrap_content"
               	 	android:layout_marginRight="6dp"
               	 	android:background="@drawable/home_hot_btn_click"/>
                -->

                <TextView
                    android:id="@+id/hot_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="热门"
                    android:textColor="#ffffff"
                    android:textSize="16sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/mTypeList"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#344450"
                android:gravity="center|center_vertical" >

                <!--
                     <ImageView
                    android:id="@+id/square_image"
                    android:layout_width="wrap_content"
               	 	android:layout_height="wrap_content"
               	 	android:layout_marginRight="6dp"
               	 	android:background="@drawable/home_video_btn"/>
                -->

                <TextView
                    android:id="@+id/square_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="广场"
                    android:textColor="#ffffff"
                    android:textSize="16sp" />
            </LinearLayout>
         

            <LinearLayout
                android:id="@+id/lookworld"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#344450"
                android:gravity="center|center_vertical" >


                <TextView
                    android:id="@+id/look_world"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="看天下"
                    android:textColor="#ffffff"
                    android:textSize="16sp" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/title_select_line"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true" >

            <ImageView
                android:id="@+id/line_hot"
                android:layout_width="50dp"
                android:layout_height="1dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_weight="1"
                android:background="#0b59be"
                android:contentDescription="@string/def" />

            <ImageView
                android:id="@+id/line_square"
                android:layout_width="50dp"
                android:layout_height="1dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="20dp"
                android:layout_weight="1"
                android:background="#0b59be"
                android:contentDescription="@string/def"
                android:visibility="invisible" />
            
            <ImageView
                android:id="@+id/line_look"
                android:layout_width="50dp"
                android:layout_height="1dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="20dp"
                android:layout_weight="1"
                android:background="#0b59be"
                android:contentDescription="@string/def"
                android:visibility="invisible" />
        </LinearLayout>
    </RelativeLayout>

    <android.support.v4.view.ViewPager
        android:id="@+id/mViewpager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/title" >
    </android.support.v4.view.ViewPager>

</RelativeLayout>
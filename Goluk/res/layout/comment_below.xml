<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:emojicon="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#ffffff"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/outurl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginRight="12dp"
        android:layout_marginTop="10dp"
        android:textColor="#1163a2"
        android:textSize="12sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginTop="10dp"
        android:background="#e6e6e6" />

    <LinearLayout
        android:id="@+id/comments"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <com.rockerhieu.emojicon.EmojiconTextView
            android:id="@+id/comment1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="10dp"
            android:textColor="#333333"
            android:textSize="14sp"
            android:visibility="gone" />

        <com.rockerhieu.emojicon.EmojiconTextView
            android:id="@+id/comment2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="10dp"
            android:textColor="#333333"
            android:textSize="14sp"
            android:visibility="gone" />

        <com.rockerhieu.emojicon.EmojiconTextView
            android:id="@+id/comment3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="10dp"
            android:textColor="#333333"
            android:textSize="14sp"
            android:visibility="gone" />

        <TextView
            android:id="@+id/comment_link"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="10dp"
            android:textColor="#a6a6a6"
            android:textSize="14sp" />
    </LinearLayout>

    <TextView
        android:layout_width="70dp"
        android:layout_height="85dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="36dp"
        android:layout_marginTop="36dp"
        android:drawableTop="@drawable/videodetail_sofaicon"
        android:text="@string/str_sofa_text"
        android:textColor="#D9D9D9"
        android:textSize="14sp"
        android:visibility="gone" />

    <LinearLayout
        android:id="@+id/push_comment"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginTop="10dp"
        android:background="#eaeaea"
        android:gravity="center_vertical" >

        <ImageView
            android:id="@+id/message"
            android:layout_width="280dp"
            android:layout_height="32dp"
            android:layout_marginLeft="8dp"
            android:background="@drawable/videodetail_inputbox" />

        <Button
            android:id="@+id/send"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="21dp"
            android:background="#eaeaea"
            android:text="@string/video_play_comment_send"
            android:textColor="#333333" />
    </LinearLayout>

</LinearLayout>
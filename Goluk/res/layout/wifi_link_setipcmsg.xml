<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_ipcbind_bg" >

    <TextView
        android:id="@+id/wifi_link_setipc_txt1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="22dp"
        android:text="@string/wifi_link_31_text"
        android:textColor="#565656"
        android:textSize="14sp" />

    <ImageView
        android:id="@+id/wifi_link_setipc_img"
        android:layout_width="186dp"
        android:layout_height="60dp"
        android:layout_below="@id/wifi_link_setipc_txt1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="60dp"
        android:contentDescription="@string/imgdes" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/wifi_link_setipc_img"
        android:layout_marginLeft="35dp"
        android:layout_marginRight="35dp"
        android:layout_marginTop="60dp"
        android:text="@string/wifi_link_30_text"
        android:textColor="#565656"
        android:textSize="12sp" />

</RelativeLayout>
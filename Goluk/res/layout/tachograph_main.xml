<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#15171b">

    <LinearLayout 
    android:layout_marginTop="60dp"
	android:id="@+id/middleLayout"
	android:layout_width="806.66dp"
    android:layout_height="wrap_content"
    android:layout_centerHorizontal="true"
    android:orientation="vertical" >
    	
    	<RelativeLayout 
    	 android:layout_marginTop="5dp"
        android:layout_width="match_parent"
    	android:layout_height="wrap_content">
       		 
    	 	<ImageView
	            android:id="@+id/mHDicon"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
				android:background="@drawable/icon_hd1080"
	            android:layout_centerVertical="true"  
	            android:layout_alignParentRight="true"/>
    	 	<ImageView
	            android:id="@+id/mIPCConnectState"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
				android:background="@drawable/ipc_ununited"
	            android:layout_centerVertical="true"  
	            android:layout_alignParentLeft="true"/>
    	 	<ImageButton 
    	 	    android:id="@+id/mIpcRepair"
    	 	    android:layout_toRightOf="@+id/mIPCConnectState"
    	 	    android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_marginLeft="4dp"
	            android:visibility="gone"
				android:background="@drawable/btn_ipc_repair"
    	 	    />
    	 	
    	 		<ImageView 
		    		android:id="@+id/mRecordState"
		    	    android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:layout_centerInParent="true"/>
	    	 	
         </RelativeLayout>
         <RelativeLayout 
            android:id="@+id/mRtmpPlayerLayout"
            android:layout_marginTop="26dp"   
            android:layout_width="match_parent"
	   		android:layout_height="wrap_content" >
	            	            
             	<RelativeLayout 
             	   android:id="@+id/vLayout"
	               android:layout_width="match_parent"
	               android:layout_height="match_parent">
             	   <com.rd.car.player.RtmpPlayerView 
	                android:id="@+id/mRtmpPlayerView"
	                android:layout_width="match_parent"
	                android:layout_height="match_parent" />
             	</RelativeLayout>
	            
	            <LinearLayout
		            android:id="@+id/mLoadingLayout"
		            android:layout_width="fill_parent"
		            android:layout_height="wrap_content"
		            android:layout_gravity="center"
		            android:layout_centerInParent="true"
		            android:orientation="vertical" >
		
		            <ImageView
		                android:id="@+id/mLoading"
		                android:layout_width="133.33dp"
		                android:layout_height="146.66dp"
		                android:layout_gravity="center"/>
		
		            <TextView
		                android:id="@+id/mLoadingText"
		                android:layout_width="fill_parent"
		                android:layout_height="wrap_content"
		                android:gravity="center"
		                android:paddingTop="37.33dp"
		                android:text="图像加载中，请稍后..."
		                android:textColor="#ffffff"
		                android:textSize="24sp" /> 
		        </LinearLayout>
		        
	            <LinearLayout 
	            android:id="@+id/mTimeLayout"
	       		android:layout_alignParentRight="true"
				android:layout_alignParentBottom="true"
				android:layout_marginRight="16dp"
				android:layout_marginBottom="16dp"
				android:gravity="center_vertical"
	       		android:layout_width="wrap_content"
	    		android:layout_height="wrap_content">
	       		    <ImageView 
	       		    	android:layout_width="20dp"
	    				android:layout_height="20dp"
	    				android:background="@drawable/icon_record"
	    				android:layout_gravity="center_vertical"
	       		        />
	       		    <TextView
		            android:id="@+id/mTime"
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:layout_gravity="center_vertical"
		            android:text="00:00"
		            android:paddingLeft="6dp"
		            android:textColor="#ffffff"
		            android:textSize="21sp" />
	       		</LinearLayout> 
         </RelativeLayout>
        <LinearLayout 
        android:layout_marginTop="26dp"
        android:layout_width="match_parent"
	    android:layout_height="wrap_content">
            <ImageView 
       		android:layout_width="19.33dp"
    		android:layout_height="25.33dp"
    		android:background="@drawable/icon_position"/>
            <TextView
	            android:id="@+id/mAddr"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:text="北京市"
	            android:singleLine="true"
	            android:paddingLeft="8dp"
	            android:paddingRight="8dp"
	            android:textColor="#b8b8b8"
	            android:textSize="22sp" 
	            android:layout_gravity="center_vertical"/>
        </LinearLayout>
    </LinearLayout>
    
    <RelativeLayout 
    android:layout_alignParentBottom="true"    
   	android:layout_width="match_parent"
    android:layout_height="wrap_content">
        
        <RelativeLayout 
        android:layout_marginTop="100dp"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
    	android:layout_height="wrap_content">
            <ImageView 
                android:id="@+id/mSpeed3"
        		android:layout_width="48dp"
    			android:layout_height="64dp"
    			android:layout_marginLeft="0dp"
    			android:background="@drawable/speed_0"/>
            <ImageView 
                android:id="@+id/mSpeed2"
                android:layout_toLeftOf="@+id/mSpeed3"
        		android:layout_width="48dp"
    			android:layout_height="64dp"
    			android:layout_marginLeft="0dp"
    			android:background="@drawable/speed_0"/>
            
        	<ImageView 
        	    android:id="@+id/mSpeed1"
        	    android:visibility="gone"
        	    android:layout_toLeftOf="@+id/mSpeed2"
        		android:layout_width="48dp"
    			android:layout_height="64dp"
    			android:background="@drawable/speed_0"/>
            
        	<ImageView
        	    android:layout_marginTop="18dp"
				android:layout_below="@+id/mSpeed3"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:background="@drawable/icon_kmh"
	            android:layout_centerHorizontal="true"/>
        	
        </RelativeLayout>
        <ImageButton 
        android:id="@+id/m8sBtn"
       	android:layout_width="133.33dp"
        android:layout_height="133.33dp"
        android:layout_marginBottom="100dp"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:background="@drawable/btn_8s" />
    </RelativeLayout>
    
    <RelativeLayout 
    android:layout_toRightOf="@+id/middleLayout"
   	android:layout_alignTop="@+id/middleLayout"
   	android:layout_alignBottom="@+id/middleLayout"
   	android:layout_width="match_parent"
    android:layout_height="wrap_content">
        <ImageButton 
        android:id="@+id/mFileBtn"
       	android:layout_width="133.33dp"
        android:layout_height="133.33dp"
        android:layout_marginTop="100dp"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true"
        android:background="@drawable/btn_filemanager" />
        <ImageButton 
        android:id="@+id/mSettingBtn"
       	android:layout_width="133.33dp"
        android:layout_height="133.33dp"
        android:layout_marginBottom="100dp"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:background="@drawable/btn_setting" />
    </RelativeLayout>

    <Button 
		android:id="@+id/wifi"
   		android:layout_width="100dp"
  	  	android:layout_height="100dp"
  	  	android:layout_alignParentRight="true"
		android:background="#00000000"
        />
</RelativeLayout>

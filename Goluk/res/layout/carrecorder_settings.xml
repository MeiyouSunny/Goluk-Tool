                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp"
                    android:text="@string/rlcx_title"
                    android:textColor="@color/setting_black_color"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/mStorayeText"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_toLeftOf="@+id/sc_right"
                    android:gravity="center_vertical"
                    android:paddingRight="10dp"
                    android:text="0KB/0KB"
                    android:textColor="@color/setting_right_text_color"
                    android:textSize="15sp" />

                <ImageButton
                    android:id="@+id/sc_right"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="15dp"
                    android:background="@drawable/icon_next_press"
                    android:contentDescription="@string/def" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="@color/setting_line_color" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:layout_alignParentBottom="true"
                    android:background="@color/setting_line_color" />

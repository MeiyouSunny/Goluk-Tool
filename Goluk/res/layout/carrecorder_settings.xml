<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ededed"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/title_layout"
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:background="@color/bg" >
  
        <ImageButton
            android:id="@+id/back_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:background="@drawable/live_btn_back" />

        <TextView
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/setting_title_text"
            android:textColor="@color/white"
            android:textSize="18sp" />
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <!-- 视频质量栏目 -->

            <RelativeLayout
                android:id="@+id/mVideoDefinition"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="15dp"
                android:background="@drawable/carrecorder_line_press"
                android:paddingLeft="15dp"
                android:paddingRight="15dp" >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:text="@string/spzl_title"
                    android:textColor="#333333"
                    android:textSize="18sp" />

                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:background="@drawable/carrecorder_setup_option_arrow"
                    android:contentDescription="@string/def" />
            </RelativeLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="10dp"
                android:text="@string/spzl_text"
                android:textColor="#999999"
                android:textSize="12sp" />

            <!-- 自动循环录像 -->

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="20dp"
                android:background="@drawable/carrecorder_setup_option_bg"
                android:paddingLeft="15dp"
                android:paddingRight="15dp" >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:text="@string/zdxhlx_title"
                    android:textColor="#333333"
                    android:textSize="18sp" />

                <Button
                    android:id="@+id/zdxhlx"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:background="@drawable/carrecorder_setup_option_on" />
            </RelativeLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:paddingTop="10dp"
                android:text="@string/zdxhlx_text"
                android:textColor="#999999"
                android:textSize="12sp" />

            <!-- 停车安防开关 -->

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="20dp"
                android:background="@drawable/carrecorder_setup_option_bg"
                android:paddingLeft="15dp"
                android:paddingRight="15dp" >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:text="停车安防开关"
                    android:textColor="#333333"
                    android:textSize="18sp" />

                <Button
                    android:id="@+id/tcaf"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:background="@drawable/carrecorder_setup_option_on" />
            </RelativeLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:paddingTop="10dp"
                android:text="启动此项后，极路客将自动判断车辆当前的状态：当车辆处于行驶状态，则极路客会根据自动循环录像的开关状态进行工作；当车辆处于停车状态，则极路客会触发1秒1拍，同时会打开异常振动（触发前8秒+后8秒视频）与移动侦测（触发前8秒+后22秒视频）功能。"
                android:textColor="#999999"
                android:textSize="12sp" />
            
            <!-- 声音录制开关 -->

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="20dp"
                android:background="@drawable/carrecorder_setup_option_bg"
                android:paddingLeft="15dp"
                android:paddingRight="15dp" >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:text="@string/sylz_title"
                    android:textColor="#333333"
                    android:textSize="18sp" />

                <Button
                    android:id="@+id/sylz"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:background="@drawable/carrecorder_setup_option_on" />
            </RelativeLayout>

            <!-- 碰撞感应灵敏度 -->

            <RelativeLayout
                android:id="@+id/pzgylmd_line"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="15dp"
                android:background="@drawable/carrecorder_line_press"
                android:paddingLeft="15dp"
                android:paddingRight="15dp" >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:text="@string/pzgy_title"
                    android:textColor="#333333"
                    android:textSize="18sp" />

                <ImageButton
                    android:id="@+id/pzgy"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:background="@drawable/carrecorder_setup_option_arrow"
                    android:contentDescription="@string/def" />
            </RelativeLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="10dp"
                android:text="@string/pzgy_text"
                android:textColor="#999999"
                android:textSize="12sp" />

            <!-- 存储容量查询 -->

            <RelativeLayout
                android:id="@+id/rlcx_line"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="15dp"
                android:background="@drawable/carrecorder_line_press"
                android:paddingLeft="15dp"
                android:paddingRight="15dp" >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:text="@string/rlcx_title"
                    android:textColor="#333333"
                    android:textSize="18sp" />

                <ImageButton
                    android:id="@+id/rlcx"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:background="@drawable/carrecorder_setup_option_arrow"
                    android:contentDescription="@string/def" />
            </RelativeLayout>

            <!-- 水印设置 -->

            <RelativeLayout
                android:visibility="gone"
                android:id="@+id/sysz_line"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="15dp"
                android:background="@drawable/carrecorder_line_press"
                android:paddingLeft="15dp"
                android:paddingRight="15dp" >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:text="@string/sysz"
                    android:textColor="#333333"
                    android:textSize="18sp" />

               <ImageButton
                    android:id="@+id/sysz"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:background="@drawable/carrecorder_setup_option_arrow"
                    android:contentDescription="@string/def" />
            </RelativeLayout>
            
              <!-- 状态提示灯 -->
            <RelativeLayout
                android:visibility="gone"
                android:id="@+id/ztts_line"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="20dp"
                android:background="@drawable/carrecorder_setup_option_bg"
                android:paddingLeft="15dp"
                android:paddingRight="15dp" >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:text="@string/ztts"
                    android:textColor="#333333"
                    android:textSize="18sp" />

                <Button
                    android:id="@+id/ztts"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:background="@drawable/carrecorder_setup_option_on" />
            </RelativeLayout>
			
            <!-- 时间设置 -->
            <RelativeLayout
                android:id="@+id/sjsz_line"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="15dp"
                android:background="@drawable/carrecorder_line_press"
                android:paddingLeft="15dp"
                android:paddingRight="15dp" >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:text="@string/sjsz"
                    android:textColor="#333333"
                    android:textSize="18sp" />

               <ImageButton
                    android:id="@+id/sjsz"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:background="@drawable/carrecorder_setup_option_arrow"
                    android:contentDescription="@string/def" />
            </RelativeLayout>
            
            <!-- 格式化SDK卡 -->
            <RelativeLayout
                android:id="@+id/gshsdk_line"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="15dp"
                android:background="@drawable/carrecorder_line_press"
                android:paddingLeft="15dp"
                android:paddingRight="15dp" >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:text="@string/gsh"
                    android:textColor="#333333"
                    android:textSize="18sp" />

               <ImageButton
                    android:id="@+id/gsh"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:background="@drawable/carrecorder_setup_option_arrow"
                    android:contentDescription="@string/def" />
            </RelativeLayout>
            
            <!-- 恢复出厂设置-->
            <RelativeLayout
                android:id="@+id/hfccsz_line"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="15dp"
                android:background="@drawable/carrecorder_line_press"
                android:paddingLeft="15dp"
                android:paddingRight="15dp" >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:text="@string/hfcc"
                    android:textColor="#333333"
                    android:textSize="18sp" />

               <ImageButton
                    android:id="@+id/hfcc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:background="@drawable/carrecorder_setup_option_arrow"
                    android:contentDescription="@string/def" />
            </RelativeLayout>
            
            <!-- 版本信息-->
            <RelativeLayout
                android:id="@+id/bbxx_line"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="15dp"
                android:background="@drawable/carrecorder_line_press"
                android:paddingLeft="15dp"
                android:paddingRight="15dp" >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:text="@string/bbxx"
                    android:textColor="#333333"
                    android:textSize="18sp" />

               <ImageButton
                    android:id="@+id/bbxx"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:background="@drawable/carrecorder_setup_option_arrow"
                    android:contentDescription="@string/def" />
            </RelativeLayout>
                       
        </LinearLayout>
    </ScrollView>

</LinearLayout>
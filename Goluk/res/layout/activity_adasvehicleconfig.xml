<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#ffffff">
        <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="46dp"
        android:id="@+id/relativelayout_title"
        android:background="#404246" >

        <ImageButton
            android:id="@+id/imagebutton_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:background="@drawable/connect_back_btn_btn"
            android:contentDescription="@string/imgdes" />

        <TextView
            android:id="@+id/textview_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/str_adas_config"
            android:textColor="@color/white"
            android:textSize="18sp" />
        <TextView
            android:id="@+id/textview_complete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="5dp"
            android:text="@string/short_input_ok"
            android:textColor="@color/white"
            android:textSize="14sp" />
    </RelativeLayout>
	<TextView 
	    android:layout_width="match_parent"
	    android:layout_height="35dp"
	    android:background="#f7f9fa"
	    android:textColor="@color/black"
	    android:textSize="13sp"
	    android:gravity="center_vertical"
	    android:paddingLeft="16dp"
	    android:text="@string/str_adas_custom_car"/>
	<View 
	    android:layout_width="match_parent"
	    android:layout_height="1px"
	    android:background="@color/setting_line_color"/>
	<RelativeLayout 
	    android:id="@+id/layout_car_name"
	    android:layout_width="match_parent"
	    android:layout_height="42dp">
	    <TextView 
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_centerVertical="true"
	        android:layout_alignParentLeft="true"
	        android:layout_marginLeft="16dp"
	        android:textSize="16sp"
	        android:textColor="@color/black"
	        android:text="@string/str_adas_car_name"/>
	    <EditText
	        android:id = "@+id/edittext_car_name"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:background="@null"
	        android:maxLength="6"
	        android:paddingRight="3dp"
	        android:textColorHint="#b9b9b9"
	        android:gravity="right"
	        android:singleLine="true"
	        android:layout_centerVertical="true"
	        android:layout_alignParentRight="true"
	        android:layout_marginRight="16dp"
	        android:textColor="#999999"
	        android:textSize="16sp"/>
	</RelativeLayout>
	<View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginLeft="16dp"
        android:background="@color/setting_line_color" />

    <RelativeLayout
        android:id="@+id/layout_front_wheelbase"
        android:layout_width="match_parent"
        android:layout_height="42dp" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="16dp"
            android:text="@string/str_adas_front_wheelbase"
            android:textColor="@color/black"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/edittext_front_wheelbase"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/textview_front_wheelbase_unit"
            android:layout_centerVertical="true"
            android:background="@null"
            android:gravity="right"
            android:singleLine="true"
            android:ellipsize="start"
            android:paddingRight="1dp"
            android:textColorHint="#b9b9b9"
            android:textColor="#999999"
            android:maxLength="6"
            android:textSize="16sp"
            android:hint="50~350 "
            android:inputType="number"/>
         <TextView
            android:id="@+id/textview_front_wheelbase_unit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="16dp"
            android:textColor="#999999"
            android:textSize="16sp"
            android:text="@string/str_adas_length_unit"/>
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginLeft="16dp"
        android:background="@color/setting_line_color" />

    <RelativeLayout
        android:id="@+id/layout_headway_distance"
        android:layout_width="match_parent"
        android:layout_height="42dp" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="16dp"
            android:text="@string/str_adas_headway_distance"
            android:textColor="@color/black"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/textview_headway_unit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="16dp"
            android:text="@string/str_adas_length_unit"
            android:textColor="#999999"
            android:textSize="16sp" />
        <EditText
            android:id="@+id/edittext_headway_distance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:singleLine="true"
            android:layout_toLeftOf="@+id/textview_headway_unit"
            android:background="@null"
            android:inputType="number"
            android:gravity="right"
            android:textColorHint="#b9b9b9"
            android:maxLength="6"
            android:paddingRight="1dp"
            android:hint="50~400 "
            android:textColor="#999999"
            android:textSize="16sp" />
    </RelativeLayout>

       <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginLeft="16dp"
        android:background="@color/setting_line_color" />

    <RelativeLayout
        android:id="@+id/layout_height_distance"
        android:layout_width="match_parent"
        android:layout_height="42dp" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="16dp"
            android:text="@string/str_adas_height_distance"
            android:textColor="@color/black"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/edittext_height_distance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/textview_height_unit"
            android:background="@null"
            android:inputType="number"
            android:singleLine="true"
            android:maxLength="6"
            android:gravity="right"
            android:paddingRight="1dp"
            android:textColorHint="#b9b9b9"
            android:hint="70~400 "
            android:textColor="#999999"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/textview_height_unit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="16dp"
            android:text="@string/str_adas_length_unit"
            android:textColor="#999999"
            android:textSize="16sp" />
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginLeft="16dp"
        android:background="@color/setting_line_color" />

    <RelativeLayout
        android:id="@+id/layout_left_wheelbase"
        android:layout_width="match_parent"
        android:layout_height="42dp" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="16dp"
            android:text="@string/str_adas_left_wheelbase"
            android:textColor="@color/black"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/edittext_left_wheelbase"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/textview_left_wheelbase_unit"
            android:background="@null"
            android:inputType="number"
            android:gravity="right"
            android:singleLine="true"
            android:paddingRight="1dp"
            android:textColorHint="#b9b9b9"
            android:maxLength="6"
            android:hint="50~300 "
            android:textColor="#999999"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/textview_left_wheelbase_unit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="16dp"
            android:text="@string/str_adas_length_unit"
            android:textColor="#999999"
            android:textSize="16sp" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginLeft="16dp"
        android:background="@color/setting_line_color" />

    <RelativeLayout
        android:id="@+id/layout_right_wheelbase"
        android:layout_width="match_parent"
        android:layout_height="42dp" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="16dp"
            android:text="@string/str_adas_right_wheelbase"
            android:textColor="@color/black"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/edittext_right_wheelbase"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/textview_right_wheelbase_unit"
            android:background="@null"
            android:gravity="right"
            android:singleLine="true"
            android:textColorHint="#b9b9b9"
            android:paddingRight="1dp"
            android:inputType="number"
            android:maxLength="6"
            android:hint="50~300 "
            android:textColor="#999999"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/textview_right_wheelbase_unit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="16dp"
            android:text="@string/str_adas_length_unit"
            android:textColor="#999999"
            android:textSize="16sp" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/setting_line_color" />
	<ImageView 
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_gravity="center_horizontal"
	    android:src="@drawable/adas_custom_car_example"/>
</LinearLayout>

<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f7f9fa">
     <RelativeLayout
        android:id="@+id/relativelayout_title"
        android:layout_width="match_parent"
        android:layout_height="46dp"
        android:background="#404246">

        <ImageButton
            android:id="@+id/imagebutton_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:background="@drawable/connect_back_btn_btn"
            android:contentDescription="@string/imgdes" />

        <TextView
            android:id="@+id/textview_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/str_adas_config"
            android:textColor="@color/white"
            android:textSize="18sp" />
    </RelativeLayout>
	<RelativeLayout 
	    android:id="@+id/layout_selected_car"
	    android:layout_width="match_parent"
	    android:layout_height="42dp"
	    android:layout_below="@+id/relativelayout_title"
	    android:layout_marginTop="15dp"
	    android:background="@color/white">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:text="@string/str_adas_select_car_type"
            android:textColor="@color/setting_black_color"
            android:textSize="16sp" />
        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="15dp"
            android:background="@drawable/icon_next_press"
            android:contentDescription="@string/def" />
        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/setting_line_color" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="15dp"
            android:background="@color/setting_line_color" />
	</RelativeLayout>
	<RelativeLayout
        android:id="@+id/layout_adjust_camera_angle"
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:layout_below="@+id/layout_selected_car"
        android:background="@color/white" >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:text="@string/str_adas_adjust_camera_angle"
            android:textColor="@color/setting_black_color"
            android:textSize="16sp" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="15dp"
            android:background="@drawable/icon_next_press"
            android:contentDescription="@string/def" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_alignParentBottom="true"
            android:background="@color/setting_line_color" />
    </RelativeLayout>

    <Button 
        android:id="@+id/btn_next"
        android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_alignParentBottom="true"
		android:layout_centerHorizontal="true"
		android:layout_marginBottom="22dp"
		android:background="@drawable/adas_button_background"
		android:text="@string/str_adas_guide"
		android:gravity="center"
		android:textColor="@color/white"
		android:textSize="20sp"
        />"
</RelativeLayout>

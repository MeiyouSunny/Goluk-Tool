<?xml version="1.0" encoding="utf-8"?>
<!-- 选择音乐 -->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:background="@color/white">
	
	<!-- title -->
	<RelativeLayout
		android:id="@+id/title_layout"
		android:layout_width="match_parent"
		android:layout_height="42dp"
		android:background="@color/bg">
		
		<!-- 
		<Button
			android:id="@+id/back_btn"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginLeft="10dp"
			android:gravity="center|left"
			android:drawableLeft="@drawable/icon_back_btn"
			android:drawablePadding="8dp"
			android:background="@color/bg"
			android:textColor="@color/white"
			android:textSize="16sp"
			android:text="@string/back_text"/>
		 -->
		
		<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_centerInParent="true"
			android:textSize="18sp"
			android:textColor="@color/white"
			android:text="@string/video_music_title_text"/>
		
		<Button
			android:id="@+id/complete_btn"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:paddingRight="17dp"
			android:layout_centerInParent="true"
			android:layout_alignParentRight="true"
			android:drawablePadding="4dp"
			android:background="@color/bg"
			android:drawableLeft="@drawable/icon_complete"
			android:text="@string/video_music_complete_text"/>
	</RelativeLayout>
	
	<RelativeLayout
		android:id="@+id/no_music_item"
		android:layout_width="match_parent"
		android:layout_height="46dp"
		android:layout_below="@id/title_layout">
		
		<ImageView
			android:id="@+id/no_music_check_img"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginLeft="14dp"
			android:layout_centerVertical="true"
			android:background="@drawable/icon_sel"
			android:contentDescription="@string/imgdes"/>
		
		<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginLeft="6dp"
			android:layout_toRightOf="@id/no_music_check_img"
			android:layout_centerVertical="true"
			android:textSize="15sp"
			android:text="@string/video_no_music_text"
			android:textColor="@color/black" />
		
		<ImageView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginRight="26dp"
			android:layout_centerVertical="true"
			android:layout_alignParentRight="true"
			android:background="@drawable/no_voice"
			android:contentDescription="@string/imgdes"/>
	</RelativeLayout>
	
	<RelativeLayout
		android:id="@+id/system_music_title_layout"
		android:layout_width="match_parent"
		android:layout_height="24dp"
		android:layout_below="@id/no_music_item"
		android:background="#eeeeee">
		
		<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginLeft="14dp"
			android:layout_centerVertical="true"
			android:textSize="18sp"
			android:text="@string/video_system_music_title_text"
			android:textColor="@color/black" />
	
	</RelativeLayout>
	
	<ListView
		android:id="@+id/video_edit_music_listview"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:layout_below="@id/system_music_title_layout"
		android:divider="#f9f9f9"
		android:dividerHeight="1sp"
		android:scrollbars="none" >
	</ListView>
</RelativeLayout>







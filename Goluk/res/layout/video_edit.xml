<?xml version="1.0" encoding="utf-8"?>
<!-- 视频编辑 -->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ededed" >

    <!-- 视频编辑title -->

    <RelativeLayout
        android:id="@+id/title_layout"
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:background="@color/bg" >

        <ImageButton
            android:id="@+id/back_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="8dp"
            android:background="@drawable/live_btn_back" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/edit_text"
            android:textColor="@color/white"
            android:textSize="18sp" />

        <Button
            android:id="@+id/next_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:background="@color/bg"
            android:drawablePadding="8dp"
            android:drawableRight="@drawable/icon_next_btn"
            android:gravity="center|right"
            android:text="@string/next_text"
            android:textColor="@color/white"
            android:textSize="16sp" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/startshare_prompt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/title_layout" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:text="@string/share_title2" />
    </RelativeLayout>

    <!-- 视频播放 -->

    <RelativeLayout
        android:id="@+id/video_play_layout"
        android:layout_width="match_parent"
        android:layout_height="204dp"
        android:layout_below="@id/startshare_prompt" >

        <com.rd.car.editor.FilterPlaybackView
            android:id="@+id/vvPlayVideo"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <ProgressBar
            android:id="@+id/video_progress_bar"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_alignParentBottom="true"
            android:progressDrawable="@drawable/video_progress" />
    </RelativeLayout>

    <!-- 控制视频播放暂停 -->

    <RelativeLayout
        android:id="@+id/play_layout"
        android:layout_width="match_parent"
        android:layout_height="204dp"
        android:layout_below="@id/title_layout"
        android:background="#00000000" >

        <!-- 视频播放按钮 -->

        <ImageView
            android:id="@+id/play_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:background="@drawable/video_play_btn"
            android:contentDescription="@string/imgdes"
            android:visibility="gone" />
    </RelativeLayout>

    <!-- 类型布局 -->

    <include
        android:id="@+id/shortshare_typelayout"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_below="@id/video_play_layout"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        layout="@layout/shortshare_selecttype" />

    <!-- 分享布局 -->

    <RelativeLayout
        android:id="@+id/shortshare_youmeng_layout"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:background="#FF0000" >
    </RelativeLayout>

    <!-- 中间的操作区域 -->

    <FrameLayout
        android:id="@+id/shortshare_operateroot"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/shortshare_youmeng_layout"
        android:layout_below="@id/shortshare_typelayout" >
    </FrameLayout>

    <!-- 视频loading -->

    <RelativeLayout
        android:id="@+id/video_loading_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clickable="true"
        android:visibility="gone" >

        <RelativeLayout
            android:id="@+id/loading_bg"
            android:layout_width="146dp"
            android:layout_height="146dp"
            android:layout_centerInParent="true"
            android:background="@drawable/edit_loading_bg" >

            <TextView
                android:id="@+id/loading_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="18dp"
                android:text="@string/video_export_text"
                android:textColor="#ffffff"
                android:textSize="14sp" />

            <ImageView
                android:id="@+id/loading_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@id/loading_text"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="5dp"
                android:background="@anim/loading"
                android:contentDescription="@string/imgdes" />
        </RelativeLayout>
    </RelativeLayout>

</RelativeLayout>
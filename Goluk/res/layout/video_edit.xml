<?xml version="1.0" encoding="utf-8"?>
<!-- 视频编辑 -->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ededed" >

    <!-- 视频编辑title -->

    <RelativeLayout
        android:id="@+id/title_layout"
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:background="@color/bg" >

        <ImageButton
            android:id="@+id/back_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="8dp"
            android:background="@drawable/live_btn_back" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/edit_text"
            android:textColor="@color/white"
            android:textSize="18sp" />

        <Button
            android:id="@+id/next_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:background="@color/bg"
            android:drawablePadding="8dp"
            android:drawableRight="@drawable/icon_next_btn"
            android:gravity="center|right"
            android:text="@string/next_text"
            android:textColor="@color/white"
            android:textSize="16sp" />
    </RelativeLayout>

    <!-- 视频播放 -->

    <RelativeLayout
        android:id="@+id/video_play_layout"
        android:layout_width="match_parent"
        android:layout_height="204dp"
        android:layout_below="@id/title_layout" >

        <com.rd.car.editor.FilterPlaybackView
            android:id="@+id/vvPlayVideo"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <ProgressBar
            android:id="@+id/video_progress_bar"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_alignParentBottom="true"
            android:progressDrawable="@drawable/video_progress" />
    </RelativeLayout>

    <!-- 控制视频播放暂停 -->

    <RelativeLayout
        android:id="@+id/play_layout"
        android:layout_width="match_parent"
        android:layout_height="204dp"
        android:layout_below="@id/title_layout"
        android:background="#00000000" >

        <!-- 视频播放按钮 -->

        <ImageView
            android:id="@+id/play_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:background="@drawable/video_play_btn"
            android:contentDescription="@string/imgdes"
            android:visibility="gone" />
    </RelativeLayout>

    <!-- 方块条 -->

    <ImageView
        android:id="@+id/box_solid"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/video_play_layout"
        android:layout_marginTop="4dp"
        android:background="@drawable/adorn"
        android:contentDescription="@string/imgdes" />

    <!-- 滤镜/MV tab -->

    <RelativeLayout
        android:id="@+id/video_edit_tab_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/box_solid"
        android:layout_marginTop="22dp" >

        <!-- 滤镜 -->

        <Button
            android:id="@+id/filter_btn"
            android:layout_width="208dp"
            android:layout_height="34dp"
            android:layout_centerInParent="true"
            android:layout_marginLeft="10dp"
            android:background="#00000000"
            android:text="@string/filter_text"
            android:textColor="@color/black"
            android:textSize="18sp" />
    </RelativeLayout>

    <!-- 分割线条 -->

    <ImageView
        android:id="@+id/line_solid"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/video_edit_tab_layout"
        android:layout_marginTop="18dp"
        android:background="@drawable/filter_solid"
        android:contentDescription="@string/imgdes" />

    <!-- 滚动区间 -->

    <ScrollView
        android:id="@+id/mv_grid_scroll"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/line_solid"
        android:scrollbars="none" >

        <LinearLayout
            android:id="@+id/mvlistlayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical" >
        </LinearLayout>
    </ScrollView>

    <!-- 视频loading -->

    <RelativeLayout
        android:id="@+id/video_loading_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clickable="true"
        android:visibility="gone" >

        <RelativeLayout
            android:id="@+id/loading_bg"
            android:layout_width="146dp"
            android:layout_height="146dp"
            android:layout_centerInParent="true"
            android:background="@drawable/edit_loading_bg" >

            <TextView
                android:id="@+id/loading_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="18dp"
                android:text="@string/video_export_text"
                android:textColor="#ffffff"
                android:textSize="14sp" />

            <ImageView
                android:id="@+id/loading_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@id/loading_text"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="5dp"
                android:background="@anim/loading"
                android:contentDescription="@string/imgdes" />
        </RelativeLayout>
    </RelativeLayout>

</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<!-- 评论列表item-->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:paddingBottom="13dp"
	android:background="#ffffff" >
	
	<!-- 头像 -->
	<ImageView
		android:id="@+id/user_photo"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_marginLeft="10dp"
		android:layout_marginTop="14dp"
		android:background="@drawable/portrait_bg"
		android:contentDescription="@string/imgdes"/>
	
	<TextView
		android:id="@+id/comment_title"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_marginLeft="5dp"
		android:layout_toRightOf="@id/user_photo"
		android:layout_alignTop="@id/user_photo"
		android:text="Jasmine Flower"
		android:textColor="@color/black"
		android:textSize="13sp"/>
	
	<TextView
		android:id="@+id/comment_desc"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_marginTop="2dp"
		android:layout_alignLeft="@id/comment_title"
		android:layout_below="@id/comment_title"
		android:text="还记得我吗"
		android:textSize="12sp"
		android:textColor="#9e9e9e"/>
	
	<!-- 评论时间 -->
	<ImageView
		android:id="@+id/comment_img"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_marginTop="14dp"
		android:layout_marginRight="20dp"
		android:layout_alignParentRight="true"
		android:background="@drawable/icon_comment_s"
		android:contentDescription="@string/imgdes"/>
	
	<TextView
		android:id="@+id/comment_time"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_marginTop="4dp"
		android:layout_marginRight="10dp"
		android:layout_alignParentRight="true"
		android:layout_below="@id/comment_img"
		android:text="1分钟前"
		android:textSize="12sp"
		android:textColor="#9e9e9e"/>
</RelativeLayout>













<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:background="#ededed" >
	
	<ImageView
		android:id="@+id/mv_img"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_centerHorizontal="true"
		android:contentDescription="@string/imgdes"
		android:background="@drawable/filter_more"/>
	
	<ImageView
		android:id="@+id/display_img"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_centerHorizontal="true"
		android:contentDescription="@string/imgdes"
		android:visibility="gone"
		android:background="@drawable/filter_selected"/>
	
	<TextView
		android:id="@+id/mv_name"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_centerHorizontal="true"
		android:layout_marginTop="18dp"
		android:layout_below="@id/mv_img"
		android:textColor="@color/black"
		android:textSize="14sp"/>
</RelativeLayout>










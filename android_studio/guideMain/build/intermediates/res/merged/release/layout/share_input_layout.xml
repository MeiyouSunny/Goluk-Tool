<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#c8000000" >

    <TextView
        android:id="@+id/share_input_cancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:text="@string/short_input_cancel"
        android:textColor="#1163a2"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/share_input_ok"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:text="@string/short_input_ok"
        android:textColor="#1163a2"
        android:textSize="16sp" />

    <EditText
        android:id="@+id/share_input_edit"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_below="@id/share_input_cancel"
        android:paddingLeft="14dp"
        android:paddingRight="14dp"
        android:paddingTop="14dp"
        android:background="@null"
        android:gravity="left|top"
        android:hint="@string/str_shortshare_other"
        android:textColor="@color/white"
        android:textColorHint="#5f5f5f"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/share_input_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@id/share_input_edit"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:textColor="#FFFFFF"
        android:textSize="10sp"/>
    
    <TextView 
        android:id="@+id/share_input_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:text="@string/str_others"
        android:textSize="16sp"
        android:textColor="@color/share_title_color" />

</RelativeLayout>
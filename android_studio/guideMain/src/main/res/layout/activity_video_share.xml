<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/rl_videoshare_root"
    android:background="#F2F4F5" >

    <!-- title -->

    <RelativeLayout
        android:id="@+id/ry_share_title"
        android:layout_width="match_parent"
        android:layout_height="46dp"
        android:background="#404246" >

        <TextView
            android:id="@+id/tv_share_back"
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:text="@string/back_text"
            android:textColor="@color/white"
            android:textSize="18sp" />
    </RelativeLayout>

    <LinearLayout
        android:layout_below="@+id/ry_share_title"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#404246"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="145dp">

        </LinearLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/et_share_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:lines="8"
                android:textSize="14sp"
                android:gravity="top"
                android:padding="5dp"
                android:background="#ffffff"
                android:textColor="#333333"
                android:hint="你的视频需要一个漂亮的描述"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="bottom"
                android:layout_alignBottom="@+id/et_share_content"
                android:layout_marginBottom="4dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_share_videoType"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:maxLength="18"
                    android:gravity="center"
                    android:background="@drawable/btn_shareselecttype_open"
                    android:textColor="#0080ff"
                    android:textSize="12sp" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:orientation="vertical"
                    android:gravity="center">
                    <TextView
                        android:id="@+id/tv_share_newActivity"
                        android:layout_width = "wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="6dp"
                        android:paddingRight="6dp"
                        android:textColor="#FFFFFF"
                        android:textSize="10sp"
                        android:layout_marginBottom="6dp"
                        android:text="@string/str_new"
                        android:visibility="visible"
                        android:background="@drawable/share_newactivities_bubble"/>
                    <TextView
                        android:id="@+id/tv_share_joniActivity"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:maxLength="18"
                        android:text="参加活动"
                        android:gravity="center"
                        android:background="@drawable/btn_shareselecttype_open"
                        android:textColor="#808080"
                        android:textSize="12sp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_share_location"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:background="@drawable/btn_shareselecttype_open"
                    android:gravity="center_vertical"
                    android:orientation="horizontal" >

                    <ImageView
                        android:id="@+id/iv_share_location"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/share_weizhi_failed"
                        android:contentDescription="@string/imgdes" />

                    <TextView
                        android:id="@+id/tv_share_location"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:maxLength="18"
                        android:gravity="center"
                        android:text="@string/share_str_no_location"
                        android:textColor="#808080"
                        android:textSize="12sp" />
                </LinearLayout>
            </LinearLayout>
        </RelativeLayout>
        <TextView
            android:id="@+id/tv_shareTo"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="6dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="6dp"
            android:maxLength="18"
            android:text="分享到"
            android:textColor="#bcbdbd"
            android:textSize="14sp" />
        <android.support.v7.widget.RecyclerView
            android:id="@+id/rv_share_list"
            android:background="#656565"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/ll_share_now"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="#0080ff"
        android:layout_alignParentBottom="true"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_share"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:background="#00000000"
            android:gravity="center"
            android:text="@string/share_text"
            android:textColor="#ffffff"
            android:textSize="16sp" />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:src="@drawable/mine_arrow"/>
    </LinearLayout>

</RelativeLayout>
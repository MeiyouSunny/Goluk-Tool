<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingTop="42dp" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:layout_marginTop="15dp"
        android:background="@color/setting_white_color"
        >

        <TextView
            android:paddingLeft="15dp"
        	android:paddingRight="15dp" 
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical|left"
            android:text="@string/str_carrecorder_storage_all"
            android:textColor="@color/setting_black_color"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/mTotalSize"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical|right"
            android:paddingRight="15dp" 
            android:textColor="@color/setting_right_text_color"
            android:textSize="15sp" />
        
		<TextView 
        	android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/setting_line_color"/>
                
		<TextView 
        	android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginLeft="15dp"
            android:layout_alignParentBottom="true"
            android:background="@color/setting_line_color"/>
        
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:background="@color/setting_white_color"
        >

        <TextView
            android:paddingLeft="15dp"
        	android:paddingRight="15dp" 
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical|left"
            android:text="@string/str_carrecorder_storage_use"
            android:textColor="@color/setting_black_color"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/mUsedSize"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical|right"
            android:paddingRight="15dp" 
            android:textColor="@color/setting_right_text_color"
            android:textSize="15sp" />
        
        <TextView 
        	android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_alignParentBottom="true"
            android:background="@color/setting_line_color"/>
        
    </RelativeLayout>

    <RelativeLayout
        android:visibility="gone"
        android:id="@+id/mFormatSDCard"
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:layout_marginTop="15dp"
        android:background="@color/setting_white_color"
        >

        <TextView
            android:paddingLeft="15dp"
        	android:paddingRight="15dp" 
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical|left"
            android:text="@string/str_carrecorder_storage_format_sdcard"
            android:textColor="@color/setting_black_color"
            android:textSize="16sp" />

        <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="15dp"
                    android:background="@drawable/icon_next_press"
                    android:contentDescription="@string/def" />
        
        <TextView 
        	android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/setting_line_color"/>
        
        <TextView 
        	android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_alignParentBottom="true"
            android:background="@color/setting_line_color"/>
        
    </RelativeLayout>
    
    <TextView
        	android:paddingLeft="15dp"
        	android:paddingBottom="10dp"
        	android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:text="@string/str_carrecorder_storage_format_sdcard_hint_text"
            android:textColor="@color/setting_right_text_color"
            android:textSize="10sp" />
    
    <TextView 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:textSize="10sp"
        android:textColor="@color/setting_black_color"
        android:text="@string/str_carrecorder_storage_hint_text"/>

</LinearLayout>
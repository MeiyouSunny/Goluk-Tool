<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/user_login_bg">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <!-- title -->

        <include layout="@layout/user_title" />
        <!-- body -->

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="14dp"
            android:layout_marginTop="22dp"
            android:src="@drawable/logo_copyright" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="14dp" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/str_version_text"
                android:textColor="#000" />

            <TextView
                android:id="@+id/user_version_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#000" />
        </LinearLayout>
        <!-- 版本检测 -->

        <View
            android:id="@+id/solid_1"
            android:layout_width="wrap_content"
            android:layout_height="1dp"
            android:background="@drawable/solid" />

        <RelativeLayout
            android:id="@+id/app_update_item"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:paddingLeft="14dp"
            android:paddingRight="14dp"
            android:background="#f4f4f4" >

            <TextView
                android:id="@+id/app_update_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_alignParentLeft="true"
                android:text="@string/version_app_update_text"
                android:textColor="#333333"
                android:textSize="14sp" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="@drawable/editor_arrow"
                android:contentDescription="@string/imgdes" />
        </RelativeLayout>

        <View
            android:id="@+id/solid_2"
            android:layout_width="wrap_content"
            android:layout_height="1dp"
            android:background="@drawable/solid" />
        <!-- 欢迎页 -->

        <RelativeLayout
            android:id="@+id/welcome_item"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:paddingLeft="14dp"
            android:paddingRight="14dp"
            android:background="#f4f4f4" >

            <TextView
                android:id="@+id/welcome_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_alignParentLeft="true"
                android:text="@string/version_welcome_text"
                android:textColor="#333333"
                android:textSize="14sp" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="@drawable/editor_arrow"
                android:contentDescription="@string/imgdes" />
        </RelativeLayout>

        <View
            android:id="@+id/solid_4"
            android:layout_width="wrap_content"
            android:layout_height="1dp"
            android:background="@drawable/solid" />

        <!-- 用户协议和隐私条款 -->

        <RelativeLayout
            android:id="@+id/ry_protocol_item"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:paddingLeft="14dp"
            android:paddingRight="14dp"
            android:background="#f4f4f4" >

            <TextView
                android:id="@+id/tv_protocol_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_alignParentLeft="true"
                android:text="@string/str_user_protocol_and_privacy"
                android:textColor="#333333"
                android:textSize="14sp" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="@drawable/editor_arrow"
                android:contentDescription="@string/imgdes" />
        </RelativeLayout>

        <View
            android:id="@+id/solid_6"
            android:layout_width="wrap_content"
            android:layout_height="1dp"
            android:background="@drawable/solid" />
    </LinearLayout>

    <!-- 底部信息 -->
    <LinearLayout 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp">
        <TextView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="10sp"
            android:textColor="#7d7d7d"
            android:text="@string/version_bottom_company"
            android:layout_gravity="center_horizontal"/>
         <TextView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="10sp"
            android:textColor="#7d7d7d"
            android:text="@string/version_bottom_copyright"
            android:layout_gravity="center_horizontal"/>
        
    </LinearLayout>
</RelativeLayout>
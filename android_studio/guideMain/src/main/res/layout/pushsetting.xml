<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ededed">

    <!-- title -->

    <RelativeLayout
        android:id="@+id/title_layout"
        android:layout_width="match_parent"
        android:layout_height="46dp"
        android:background="@color/bg">

        <ImageButton
            android:id="@+id/back_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:background="@drawable/cross_screen_arrow_icon"
            android:contentDescription="@string/imgdes" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/setting_msg_notify"
            android:textColor="@color/white"
            android:textSize="18sp" />
    </RelativeLayout>

    <!-- 有人给我评论 -->

    <LinearLayout
        android:id="@+id/notify_setting_comment_layout"
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:layout_below="@id/title_layout"
        android:layout_marginTop="32dp"
        android:orientation="vertical">

        <View
            android:id="@+id/notify_setting_sold1"
            android:layout_width="wrap_content"
            android:layout_height="1dp"
            android:background="@drawable/solid" />

        <RelativeLayout
            android:id="@+id/notify_setting_comment_item"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="#f4f4f4">

            <TextView
                android:id="@+id/notify_setting_comment_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="14dp"
                android:text="@string/setting_notify_comment"
                android:textColor="#3f3f3f"
                android:textSize="16sp" />

            <Button
                android:id="@+id/notify_setting_comment_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="14dp"
                android:background="@drawable/set_open_btn" />
        </RelativeLayout>

        <View
            android:id="@+id/notify_setting_sold2"
            android:layout_width="wrap_content"
            android:layout_height="1dp"
            android:background="@drawable/solid" />
    </LinearLayout>

    <!-- 有人给我点赞 -->

    <LinearLayout
        android:id="@+id/notify_setting_prise_layout"
        android:layout_width="match_parent"
        android:layout_height="41dp"
        android:layout_below="@id/notify_setting_comment_layout"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/notify_setting_prise_item"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="#f4f4f4">

            <TextView
                android:id="@+id/notify_setting_prise_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="14dp"
                android:text="@string/setting_notify_parise"
                android:textColor="#3f3f3f"
                android:textSize="16sp" />

            <Button
                android:id="@+id/notify_setting_prise_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="14dp"
                android:background="@drawable/set_open_btn" />
        </RelativeLayout>

        <View
            android:id="@+id/notify_setting_prise_sold2"
            android:layout_width="wrap_content"
            android:layout_height="1dp"
            android:background="@drawable/solid" />
    </LinearLayout>

    <!-- 有人关注我 -->

    <LinearLayout
        android:id="@+id/notify_setting_follow_layout"
        android:layout_width="match_parent"
        android:layout_height="41dp"
        android:layout_below="@id/notify_setting_prise_layout"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/notify_setting_follow_item"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="#f4f4f4">

            <TextView
                android:id="@+id/notify_setting_follow_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="14dp"
                android:text="@string/setting_notify_follow"
                android:textColor="#3f3f3f"
                android:textSize="16sp" />

            <Button
                android:id="@+id/notify_setting_follow_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="14dp"
                android:background="@drawable/set_open_btn" />
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/notify_setting_friends_layout"
        android:layout_width="match_parent"
        android:layout_height="41dp"
        android:layout_below="@id/notify_setting_follow_layout"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/notify_setting_friends_item"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="#f4f4f4">

            <TextView
                android:id="@+id/notify_setting_friends_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="14dp"
                android:text="@string/settting_notify_friends"
                android:textColor="#3f3f3f"
                android:textSize="16sp" />

            <Button
                android:id="@+id/notify_setting_friends_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="14dp"
                android:background="@drawable/set_open_btn" />
        </RelativeLayout>
    </LinearLayout>


</RelativeLayout>
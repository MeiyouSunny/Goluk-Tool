<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:id="@+id/rl_vid_resolution_hud"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#c0000000">
    <ImageView
        android:id="@+id/iv_resolution_hud"
        android:src="@drawable/resolution_hud_arrow"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="25dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#ffffff"
        android:textSize="16sp"
        android:text="@string/change_resolution_hint"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/iv_resolution_hud"/>
    <TextView
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="200dp"
        android:background="@drawable/bg_white_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:textColor="#333333"
        android:text="知道了"
        android:paddingLeft="32dp"
        android:paddingRight="32dp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"/>
</RelativeLayout>
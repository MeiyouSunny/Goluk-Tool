<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f7f9fa"
    android:orientation="vertical" >

    <!-- title -->

    <RelativeLayout
        android:id="@+id/title_layout"
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:background="@color/photoalbum_title_bg_color" >

        <ImageButton
            android:id="@+id/back_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="15dp"
            android:background="@drawable/live_btn_back" />

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_centerVertical="true"
            android:textColor="@color/white"
            android:textSize="18sp" />
    </RelativeLayout>
    <!-- content -->
    <RelativeLayout
        android:id="@+id/all"
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:layout_marginTop="15dp"
        android:background="@color/setting_white_color" >

        <TextView
            android:id="@+id/allText"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:text="@string/carrecorder_tcaf_all"
            android:textColor="@color/setting_black_color"
            android:textSize="16sp" />

        <ImageButton
            android:id="@+id/allRight_image"
            android:layout_width="20dp"
            android:layout_height="14dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="15dp"
            android:background="@drawable/setup_icon_hook"
            android:contentDescription="@string/def"
            android:visibility="gone" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/setting_line_color" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="15dp"
            android:background="@color/setting_line_color" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/move"
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:background="@color/setting_white_color" >

        <TextView
            android:id="@+id/moveText"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:text="@string/carrecorder_tcaf_move"
            android:textColor="@color/setting_black_color"
            android:textSize="16sp" />

        <ImageButton
            android:id="@+id/moveRight_image"
            android:layout_width="20dp"
            android:layout_height="14dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="15dp"
            android:background="@drawable/setup_icon_hook"
            android:contentDescription="@string/def"
            android:visibility="gone" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="15dp"
            android:background="@color/setting_line_color" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/vibration"
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:background="@color/setting_white_color" >

        <TextView
            android:id="@+id/vibrationText"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:text="@string/carrecorder_tcaf_vibration"
            android:textColor="@color/setting_black_color"
            android:textSize="16sp" />

        <ImageButton
            android:id="@+id/vibrationRight_image"
            android:layout_width="20dp"
            android:layout_height="14dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="15dp"
            android:background="@drawable/setup_icon_hook"
            android:contentDescription="@string/def"
            android:visibility="gone" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="15dp"
            android:background="@color/setting_line_color" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_1080p_high"
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:background="@color/setting_white_color" >

        <TextView
            android:id="@+id/tv_1080p_high"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:text="@string/carrecorder_tcaf_close"
            android:textColor="@color/setting_black_color"
            android:textSize="16sp" />

        <ImageButton
            android:id="@+id/closeRight_image"
            android:layout_width="20dp"
            android:layout_height="14dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="15dp"
            android:background="@drawable/setup_icon_hook"
            android:contentDescription="@string/def"
            android:visibility="gone" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_alignParentBottom="true"
            android:background="@color/setting_line_color" />
    </RelativeLayout>
    
    <!-- 提示文字 -->
    <TextView 
        android:id="@+id/carrecorder_hint1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/carrecorder_hint_text1"
        android:layout_marginTop="15dp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:textColor="#999999"
        android:textSize="12sp" />
    
    <TextView 
        android:id="@+id/carrecorder_hint2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/carrecorder_hint_text2"
        android:layout_marginTop="15dp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:textColor="#999999"
        android:textSize="12sp" />

</LinearLayout>
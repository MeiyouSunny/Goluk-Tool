<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#242629"
    android:paddingBottom="25dp"
    android:paddingTop="16dp">

    <TextView
        android:id="@+id/share_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="12dp"
        android:text="@string/str_share_to_sw"
        android:textColor="#999999"
        android:textSize="18sp" />

    <!--<HorizontalScrollView-->
    <!--android:layout_width="match_parent"-->
    <!--android:layout_height="wrap_content"-->
    <!--android:layout_below="@id/share_text">-->

    <LinearLayout
        android:weightSum="5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="6dp"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:baselineAligned="false"
        android:layoutAnimation="@anim/layout_animation"
        android:orientation="horizontal"
        android:layout_below="@id/share_text">

        <!-- Instagram -->
        <RelativeLayout
            android:id="@+id/instagram_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:visibility="gone">

            <ImageButton
                android:id="@+id/share_instagram"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:background="@drawable/share_instagram_friend_icon" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/share_instagram"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="4dp"
                android:text="@string/str_instagram"
                android:textColor="#666666"
                android:textSize="10sp" />
        </RelativeLayout>

        <!-- Facebook -->

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1" >

            <ImageButton
                android:id="@+id/share_facebook"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:background="@drawable/share_facebook_friend_icon" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/share_facebook"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="4dp"
                android:text="@string/str_facebook"
                android:textColor="#666666"
                android:textSize="10sp" />
        </RelativeLayout>

        <!-- Twitter -->
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1" >

            <ImageButton
                android:id="@+id/share_twitter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:background="@drawable/share_twitter_friend_icon" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/share_twitter"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="4dp"
                android:text="@string/str_twitter"
                android:textColor="#666666"
                android:textSize="10sp" />
        </RelativeLayout>

        <!-- Whatsapp -->
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1" >

            <ImageButton
                android:id="@+id/share_whatsapp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:background="@drawable/share_whatsapp_friend_icon" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/share_whatsapp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="4dp"
                android:text="@string/str_whatsapp"
                android:textColor="#666666"
                android:textSize="10sp" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1" >

            <ImageButton
                android:id="@+id/share_line"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:background="@drawable/share_line_friend_icon" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/share_line"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="4dp"
                android:text="@string/str_line"
                android:textColor="#666666"
                android:textSize="10sp" />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <ImageButton
                android:id="@+id/share_vk"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:background="@drawable/share_vk_icon" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/share_vk"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="4dp"
                android:text="@string/str_vk"
                android:textColor="#666666"
                android:textSize="10sp" />
        </RelativeLayout>
    </LinearLayout>

    <!--</HorizontalScrollView>-->

</RelativeLayout>
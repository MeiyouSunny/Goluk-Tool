    <TextView
            android:id="@+id/partake_num"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="11dp"
            android:layout_centerVertical="true"
            android:textColor="#216da8"
            android:textSize="14sp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp">

        <TextView
            android:id="@+id/now_ranking_btn"
            android:layout_width="wrap_content"
            android:layout_height="24dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="11dp"
            android:gravity="center"
            android:background="@drawable/icon_nor_"
            android:drawableLeft="@drawable/icon__rank"
            android:drawablePadding="3dp"
            android:textColor="#ffffff"
            android:textSize="11sp"
            android:text="@string/str_cluster_ranking_txt"/>

        <Button
            android:id="@+id/partake_btn"
            android:layout_width="wrap_content"
            android:layout_height="24dp"
            android:layout_alignParentRight="true"
            android:text="@string/attend_activity"
            android:textColor="#ffffff"
            android:layout_marginRight="8dp"
            android:padding="4dp"
            android:background="@drawable/together_join_icon"
            android:layout_centerVertical="true"
            android:textSize="12sp" />

        <Button
            android:id="@+id/btn_cluster_head_vote"
            android:layout_width="wrap_content"
            android:layout_height="24dp"
            android:layout_toLeftOf="@id/partake_btn"
            android:layout_alignBottom="@id/partake_btn"
            android:text="@string/str_vote_now"
            android:textColor="#0080ff"
            android:padding="4dp"
            android:layout_marginRight="8dp"
            android:layout_centerVertical="true"
            android:background="@drawable/btn_white_body_blue_stroke"
            android:textSize="12sp" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="7dp"
        android:background="#f7f9fa" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="32dp" >

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:gravity="right"
            android:layout_weight="1" >

            <Button
                android:id="@+id/recommend_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/str_recommend"
                android:layout_marginRight="21dp"
                android:background="#00000000"
                android:textColor="#0080ff"
                android:textSize="16sp" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1" >

            <Button
                android:id="@+id/news_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="21dp"
                android:text="@string/str_newest_text"
                 android:background="#00000000"
                android:textColor="#333333"
                android:textSize="16sp" />
        </RelativeLayout>
    </LinearLayout>

</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppTheme" parent="Theme.AppCompat.DayNight.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#242629</item>
    </style>

    <style name="SettingLabelLayout">
        <item name="android:layout_height">42dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:clickable">true</item>
        <item name="android:background">@drawable/selector_white</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
    </style>

    <style name="SettingLabel">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">42dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textColor">@color/setting_black_color</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="SettingLabel.Arrow" parent="SettingLabel">
        <item name="android:drawableRight">@drawable/icon_next_press</item>
    </style>

    <style name="SettingLabelValue">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_marginRight">20dp</item>
        <item name="android:textColor">@color/setting_right_text_color</item>
        <item name="android:textSize">15sp</item>
    </style>

    <!-- 灰色水平分割线 -->
    <style name="LineGrayHorizontal">
        <item name="android:layout_width">match_parent</item>
        <item name="android:background">#C8C7CC</item>
        <item name="android:layout_height">1px</item>
    </style>

    <style name="LineGrayHorizontalPaddingLeft" parent="LineGrayHorizontal">
        <item name="android:layout_marginLeft">16dp</item>
    </style>

    <style name="SwitchButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_centerVertical">true</item>
    </style>


</resources>
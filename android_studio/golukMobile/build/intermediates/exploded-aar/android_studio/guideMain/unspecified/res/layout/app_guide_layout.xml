<!-- goluk首页 -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ll_guide_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#90000000"
    android:gravity="bottom">
    
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:maxWidth="210dp"
        android:maxHeight="100dp"
        android:scaleType="centerCrop"
         android:src="@drawable/guide_main_02"
        android:contentDescription="@string/imgdes"/>
    
    <TextView 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:textSize="14sp"
        android:textColor="#ffffff"
        android:text="@string/guide_start"
        android:layout_marginTop="25dp"
        android:layout_marginBottom="16dp"/>
    
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:scaleType="centerCrop"
        android:src="@drawable/guide_main_06"
        android:layout_marginBottom="4dp"
        android:contentDescription="@string/imgdes"/>
    
    <LinearLayout 
        android:weightSum="5"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:orientation="horizontal"
        android:gravity="center">
        <ImageView 
            android:layout_gravity="center_horizontal"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:scaleType="fitXY"
            android:src="@drawable/guide_main_10"
            android:contentDescription="@string/imgdes"/>
    </LinearLayout>
    
</LinearLayout>
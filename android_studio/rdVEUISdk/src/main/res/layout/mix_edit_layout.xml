<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:id="@+id/mix_edit_layout"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:gravity="center"
              android:orientation="vertical"
              android:visibility="gone">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:visibility="gone">

        <!--<com.rd.lib.ui.ExtButton-->
        <!--android:id="@+id/btn_mix_edit_filter"-->
        <!--style="@style/menuSideButtonStyle"-->
        <!--android:layout_gravity="center_vertical"-->
        <!--android:layout_marginTop="9dp"-->
        <!--android:drawableTop="@drawable/btn_effect_filter"-->
        <!--android:text="@string/filter"-->
        <!--android:textSize="@dimen/text_size_10"-->
        <!--/>-->

        <com.rd.lib.ui.ExtButton
            android:id="@+id/btn_mix_edit_effect"
            style="@style/menuSideButtonStyle"
            android:layout_gravity="center_vertical"
            android:layout_marginTop="9dp"
            android:drawableTop="@drawable/btn_effect"
            android:text="@string/special"
            android:textSize="@dimen/text_size_10"
            />

        <com.rd.lib.ui.ExtButton
            android:id="@+id/btn_mix_edit_sound"
            style="@style/menuSideButtonStyle"
            android:layout_gravity="center_vertical"
            android:layout_marginTop="9dp"
            android:drawableTop="@drawable/btn_voice"
            android:text="@string/volume"
            android:textSize="@dimen/text_size_10"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="horizontal"
        >

        <com.rd.lib.ui.ExtButton
            android:id="@+id/btn_mix_edit_filter"
            style="@style/menuSideButtonStyle"
            android:layout_gravity="center_vertical"
            android:layout_marginTop="9dp"
            android:drawableTop="@drawable/btn_effect_filter"
            android:text="@string/filter"
            android:textSize="@dimen/text_size_10"
            android:visibility="gone"
            />

        <com.rd.lib.ui.ExtButton
            android:id="@+id/btn_mix_edit_trim"
            style="@style/menuSideButtonStyle"
            android:layout_gravity="center_vertical"
            android:drawableTop="@drawable/btn_effect"
            android:text="@string/trim_title"
            android:textSize="@dimen/text_size_10"/>

        <com.rd.lib.ui.ExtButton
            android:id="@+id/btn_mix_edit_edit"
            style="@style/menuSideButtonStyle"
            android:layout_gravity="center_vertical"
            android:drawableTop="@drawable/btn_voice"
            android:text="@string/edit"
            android:textSize="@dimen/text_size_10"/>
    </LinearLayout>
</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="@dimen/priview_item_height_plus">

        <ImageView
            android:id="@+id/ivAddItem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:background="@drawable/item_edit_add_normal"/>


        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/ivAddItem"
            android:layout_centerHorizontal="true"
            >

            <ImageView
                android:id="@+id/ivTransition"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/additem_transition"/>

            <TextView
                android:id="@+id/tvTransitionTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/ivTransition"
                android:layout_alignRight="@+id/ivTransition"
                android:layout_centerVertical="true"
                android:gravity="center"
                android:text="@string/show_style_item_null"
                android:textColor="@color/black"
                android:textSize="@dimen/dimen_10"/>

        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/rl_extra_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true">

            <ImageView
                android:id="@+id/ivExtraItem"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:background="@drawable/edit_add_video_button"
                android:visibility="gone"/>

            <TextView
                android:id="@+id/tvItemSort"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/ivExtraItem"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="4dp"
                android:text="@string/preview_sort"
                android:textColor="@drawable/sort_text_color"
                android:textSize="@dimen/text_size_13"
                android:visibility="gone"/>
        </RelativeLayout>
    </RelativeLayout>

</FrameLayout>
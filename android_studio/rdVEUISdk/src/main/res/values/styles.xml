<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android" xmlns:tools="http://schemas.android.com/tools">

    <style name="menuSideButtonStyle">
        <item name="android:textSize">12.5dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:shadowColor">@color/transparent_black</item>
        <item name="android:shadowRadius">5</item>
        <item name="android:layout_gravity">right</item>
        <item name="android:minWidth">40dp</item>
        <item name="android:button">@null</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:background">@null</item>
    </style>

    <style name="voiceFactorSeekbarStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:max">100</item>
        <item name="android:maxHeight">2.0dip</item>
        <item name="android:minHeight">2.0dip</item>
        <item name="android:progressDrawable">@drawable/voice_seekbar_progress</item>
        <item name="android:thumb">@drawable/voice_seekbar_thumb</item>
    </style>

    <style name="TimerTextStyle">
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:textSize">14.0dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:shadowColor">#ff7f7f7f</item>
        <item name="android:shadowDx">0</item>
        <item name="android:shadowDy">0</item>
        <item name="android:shadowRadius">4</item>
    </style>

    <style name="FliterBucketStyle">
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minHeight">50dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/text_size_16</item>
        <item name="android:button">@null</item>
        <item name="android:background">@drawable/item_fliter_underline</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:textColor">@drawable/edit_menu_color</item>
    </style>

    <style name="main_entry_button" parent="default_audio_button">
        <item name="android:textSize">@dimen/text_size_11</item>
        <item name="android:textColor">@drawable/normal_bottom_button_text_color</item>
        <item name="android:background">@null</item>
        <item name="android:drawablePadding">-14dp</item>
    </style>

    <style name="listviewDialogAnimation" parent="android:Animation.Dialog">
        <item name="android:windowEnterAnimation">@anim/slide_in</item>
        <item name="android:windowExitAnimation">@anim/slide_out</item>
    </style>

    <style name="dialogNoAnimation" parent="android:Animation.Dialog">
        <item name="android:windowEnterAnimation">@null</item>
        <item name="android:windowExitAnimation">@null</item>
    </style>

    <style name="dialog" parent="android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@drawable/dialog_trans</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowAnimationStyle">@style/dialogNoAnimation</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:background">@drawable/dialog_trans</item>
    </style>

    <style name="dialogNoDim" parent="dialog">
        <item name="android:backgroundDimEnabled">false</item>
    </style>

    <style name="alert_listview_dialog_text_style" parent="android:Widget.TextView">
        <item name="android:textColor">@drawable/alert_button_text_color</item>
        <item name="android:textSize" tools:ignore="SpUsage">
            @dimen/main_classify_title_left_text_size
        </item>
    </style>

    <style name="listviewDialog" parent="dialog">
        <item name="android:windowAnimationStyle">@style/listviewDialogAnimation</item>
        <item name="android:windowBackground">@color/transparent</item>
        <item name="android:gravity">bottom</item>
    </style>

    <style name="selectDialog" parent="dialog">
        <item name="android:windowBackground">@drawable/alert_dialog_bg</item>
        <item name="android:maxWidth">300dp</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="public_title_bar_button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minWidth">30dp</item>
        <item name="android:paddingLeft">3.3dp</item>
        <item name="android:paddingRight">3.3dp</item>
        <item name="android:paddingTop">3.3dp</item>
        <item name="android:paddingBottom">5.5dp</item>
        <item name="android:textSize">@dimen/text_size_16</item>
        <item name="android:textColor">@drawable/main_button_text_color</item>
    </style>

    <style name="alert_dialog_positive_btn_text_style" parent="android:Widget.TextView">
        <item name="android:textColor">@drawable/alert_button_text_color</item>
        <item name="android:textSize" tools:ignore="SpUsage">16dp</item>
    </style>

    <style name="crop_rotate_mirror_style">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="alert_dialog_bg_style">
        <item name="android:background">@drawable/alert_dialog_bg</item>
    </style>

    <style name="music_library_titlemenu">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:button">@null</item>
        <item name="android:background">@null</item>
        <item name="android:drawablePadding">5dp</item>
        <item name="android:textColor">@drawable/select_camera_popwin_textcolor</item>
        <item name="android:textSize">@dimen/text_size_13</item>
    </style>

    <!-- gridview样式 -->
    <!-- 下载音乐进度条 -->

    <style name="default_audio_button">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textSize">@dimen/text_size_12</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">marquee</item>
        <item name="android:gravity">center</item>
        <item name="android:button">@null</item>
        <item name="android:background">@null</item>
        <item name="android:padding">0dp</item>
    </style>

    <style name="baseline_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@color/baseline_color</item>
    </style>

    <style name="public_titlebar_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:minHeight">@dimen/public_titlebar_minheight</item>
    </style>

    <style name="video_list_grid_view_style" parent="android:Widget.GridView">
        <item name="android:cacheColorHint">@color/transparent</item>
        <item name="android:columnWidth">@dimen/video_list_grid_item_width</item>
        <item name="android:alwaysDrawnWithCache">true</item>
        <item name="android:fadingEdge">none</item>
        <item name="android:horizontalSpacing">@dimen/video_list_grid_item_space_size</item>
        <item name="android:listSelector">@color/transparent</item>
        <item name="android:numColumns">auto_fit</item>

        <item name="android:verticalSpacing">@dimen/video_list_grid_item_space_size</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="main_entry_no_videos" parent="android:Widget.TextView">
        <item name="android:drawableTop">@drawable/ic_gallery_empty1</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/not_found_text_color</item>
        <item name="android:textSize">@dimen/text_size_21</item>
        <item name="android:background">@null</item>
        <item name="android:drawablePadding">@dimen/text_size_10</item>
    </style>

    <style name="priview_text_style">
        <item name="android:textSize">@dimen/text_size_14</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="menu_style" parent="@style/priview_text_style">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
        <item name="android:minWidth">55dp</item>
        <item name="android:background">@null</item>
    </style>

    <style name="edit_menu" parent="@style/menu_style">
        <item name="android:button">@null</item>
        <item name="android:minWidth">40dp</item>
        <item name="android:layout_marginLeft">@dimen/edit_video_ment_item_marginLeft</item>
        <item name="android:textColor">@drawable/edit_menu_color</item>
        <item name="android:drawablePadding">-5dp</item>
    </style>

    <style name="edit_menu_style" parent="@style/menu_style">
        <item name="android:button">@null</item>
        <item name="android:minWidth">40dp</item>
        <item name="android:textColor">@drawable/edit_menu_color</item>
    </style>

    <!-- 分割线 -->
    <!-- 字幕菜单 -->
    <style name="subtitle_menu_style">
        <item name="android:minHeight">40dp</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textSize">@dimen/text_size_18</item>
        <item name="android:textColor">@drawable/edit_menu_color</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@null</item>
        <item name="android:button">@null</item>
    </style>

    <style name="sub_menu_rbtn_style" parent="@style/subtitle_menu_style">
        <item name="android:textColor">@drawable/edit_menu_color</item>
        <item name="android:background">@drawable/item_subtitle_underline</item>
    </style>

    <style name="special_radio_btn_style" parent="@style/sub_menu_rbtn_style">
        <item name="android:button">@null</item>
        <item name="android:background">@drawable/item_special_underline</item>
    </style>

    <style name="styleEditorDuration" parent="android:Widget.TextView">
        <item name="android:background">@drawable/transparent_btn_bg</item>
        <item name="android:layout_marginBottom">5dp</item>
        <item name="android:layout_marginRight">5dp</item>
        <item name="android:paddingLeft">3dp</item>
        <item name="android:paddingRight">3dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/text_size_16</item>
    </style>

    <style name="list_alert_cancel_text_style" parent="android:Widget.TextView">
        <item name="android:textColor">@drawable/alert_button_text_color</item>
        <item name="android:textSize" tools:ignore="SpUsage">
            @dimen/main_classify_title_left_text_size
        </item>
    </style>

    <style name="listviewStyle_trans">
        <item name="android:cacheColorHint">@color/transparent</item>
        <item name="android:divider">@null</item>
        <item name="android:listSelector">@color/transparent</item>
        <item name="android:background">@null</item>
    </style>
    <!-- 编辑更多选项按钮风格 -->

    <!-- 编辑更多画面比例的布局风格 -->
    <style name="OrientationDialogStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">80dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">bottom</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:orientation">vertical</item>
    </style>

    <!-- 极录客radiogroup风格 -->

    <!-- 极录客imageview风格 -->
    <style name="sp_iv_music_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

</resources>